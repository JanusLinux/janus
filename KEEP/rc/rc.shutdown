#!/bin/sh

. /etc/init.d/rc.functions

attachPath

echo System going down...

msg Synchronizing clock...
hwclock -u -w
status

msg Terminating all daemons...
killall5 -15
sleep 5
killall5 -9
status

msg Syncing buffers...
sync
sleep 3
wait
status

msg Deactivating swap partition...
swapoff -a
status

msg Unmounting file systems...
umount -a -r
status

msg Remounting root as read-only...
mount -o remount,ro /
status

echo "Bye!"
