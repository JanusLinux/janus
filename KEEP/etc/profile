#
# /etc/profile: system-wide defaults for bash(1) login shells
#

export PATH="/usr/bin"

if [ ! -f ~/.inputrc ]; then
	export INPUTRC="/etc/inputrc"
fi

if [ "$UID" = "0" ]; then
	export PS1="\[$(tput setaf 1)\][\u@\h \W]# \[$(tput sgr0)\]"
else
	export PS1="\[$(tput setaf 2)\][\u@\h \W]\\$ \[$(tput sgr0)\]"
fi

umask 022

# End of file
