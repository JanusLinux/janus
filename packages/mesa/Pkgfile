# Description: An open-source implementation of the OpenGL specification
# URL:         https://www.mesa3d.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  libdrm libvdpau llvm wayland-protocols libxdamage libxshmfence libxvmc libxxf86vm mako

name=mesa
version=18.3.0
release=4
source=(https://mesa.freedesktop.org/archive/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure CFLAGS="$CFLAGS" CXXFLAGS="$CXXFLAGS" LDFLAGS="-lLLVM" $BUILDFLAGS \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-gallium-drivers="i915,r600,nouveau,radeonsi,swrast"  \
		--with-platforms="x11,drm,wayland" \
		--with-vulkan-drivers="radeon,intel" \
		--enable-gallium-extra-hud \
		--enable-gbm \
		--enable-gles1 \
		--enable-gles2 \
		--enable-glx="dri" \
		--enable-glx-tls \
		--enable-llvm \
		--enable-llvm-shared-libs \
		--enable-nine \
		--enable-osmesa \
		--enable-shared-glapi \
		--enable-vdpau \
		--enable-xa \
		--enable-xlib-lease
	make
	make DESTDIR=$PKG install-strip

	echo "Stripping $name package..."
	find $PKG -type f | xargs file 2>/dev/null | grep "LSB executable"       | cut -f 1 -d : | xargs $STRIP --strip-all			2>/dev/null || true
	find $PKG -type f | xargs file 2>/dev/null | grep "shared object"        | cut -f 1 -d : | xargs $STRIP --strip-unneeded		2>/dev/null || true
	find $PKG -type f | xargs file 2>/dev/null | grep "current ar archive"   | cut -f 1 -d : | xargs $STRIP --strip-debug			2>/dev/null || true
	find $PKG -type f | xargs file 2>/dev/null | grep "libtool library file" | cut -f 1 -d : | xargs rm -rf					2>/dev/null || true
	cd $PKG
	rm -rf {,usr/}{,local/}{,share/}{doc,man,info,locale} usr{,/local}{,/share},opt/*}/{man,info} usr/{,local/}{,share/}{doc,gtk-doc} opt/*/{doc,gtk-doc}
	rm -rf {,usr/}lib/charset.alias
}
