# Description: The basic file, shell and text manipulation utilities of the GNU operating system
# URL:         https://www.gnu.org/software/coreutils/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  gmp acl libcap libressl libselinux
# Section:     utils

name=coreutils
version=8.32
release=2
source=("https://ftp.gnu.org/gnu/$name/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	export FORCE_UNSAFE_CONFIGURE=1

	PERL=missing \
	MAKEINFO=true \
	LDFLAGS='-static' \
	./configure $BUILDFLAGS \
		--prefix=/opt/coreutils/ \
		--libexecdir=/opt/coreutils/lib \
		--with-openssl
	make
	make DESTDIR="$PKG" install

	( cd "$PKG"/opt/coreutils/bin ; ln -sf install ginstall )
	( cd "$PKG"/opt/coreutils/share/man/man1 ; ln -sf install.1 ginstall.1 )
}
