# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=musl-tools
pkgver=current
pkgrel=1
pkgdesc="Misc utilities for musl libc"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64' 'mips' 'ppc64le' 'ppc64' 'ppc')
url="https://projectblaze.github.io/"
license=('MIT')
depends=('musl')
source=('getconf.c'
	'getent.c'
	'iconv.c')
md5sums=('57ef2c63b9ec6a2041694ace97d4ffa2'
         'eadc8794eadb79dbc383b2b91a32084d'
         '45f92f8d59cf84d765de698a9578dbf4')

package() {
	mkdir -p "$pkgdir"/bin

	for file in getconf getent iconv; do
		cc $CFLAGS "$srcdir"/${file}.c -o "$pkgdir"/bin/$file
	done
}
