# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=cryptsetup
pkgver=2.0.6
pkgrel=1
pkgdesc="Userspace setup tool for transparent encryption of block devices using dm-crypt"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="https://gitlab.com/cryptsetup/cryptsetup/"
license=('GPL-2.0-or-later')
depends=('musl' 'lvm2' 'libgcrypt' 'popt' 'util-linux' 'json-c' 'argon2')
options=('!emptydirs')
source=("https://www.kernel.org/pub/linux/utils/cryptsetup/v2.0/$pkgname-$pkgver.tar.xz"
	'initd'
	'confd')
md5sums=('ec03e09cbe978a19fa6d6194ac642bae'
         '05f99b5a3bfb1f49895edc3f0732b15d'
         'cd8d4c33f5016cd0b4516b2bc33507f2')

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--prefix='' \
		--sbindir=/bin \
		--enable-libargon2 \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install

	install -D -m644 "$srcdir"/confd "$pkgdir"/etc/conf.d/dmcrypt
	install -D -m755 "$srcdir"/initd "$pkgdir"/etc/init.d/dmcrypt
}
