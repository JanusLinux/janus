# Description: Multi-protocol instant messaging client
# URL:         https://pidgin.im/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  python perl gtk2 libgcrypt gnutls nss libsasl startup-notification krb5
# Section:     web

name=pidgin
version=2.14.1
release=3
source=("https://downloads.sourceforge.net/pidgin/$name-$version.tar.bz2")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sysconfdir=/etc \
		--disable-avahi \
		--disable-gstreamer \
		--disable-gstreamer-interfaces \
		--disable-gtkspell \
		--disable-meanwhile \
		--disable-idn \
		--disable-nm \
		--disable-schemas-install \
		--disable-tcl \
		--disable-vv
	make
	make DESTDIR="$PKG" install
}
