# Description: IP Routing Utilities
# URL:         https://git.kernel.org/pub/scm/network/iproute2/iproute2.git
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  libcap iptables
# Priority:    required
# Section:     net

name=iproute2
version=5.9.0
release=2
options=('bootstrap')
source=("https://www.kernel.org/pub/linux/utils/net/$name/$name-$version.tar.xz")

build() {
	export CFLAGS="-I$STUFF/include $CFLAGS"

	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/iproute2/musl-fixes.patch
	patch -Np1 -i "$STUFF"/iproute2/avoid-arpd.patch

	sed -i -e 's:=/share:=/usr/share:' \
		-e 's:-Werror::' Makefile
	sed -e 's/^check_elf$/echo "no"/' -i configure

	./configure $BUILDFLAGS
	make
	make DESTDIR="$PKG" SBINDIR="/usr/bin" install

	pushd "$PKG"
		rm -rf var
		mkdir -p usr/share/factory
		mv etc usr/share/factory

		install -Dm644 "$STUFF"/stateless.d/iproute2.conf usr/lib/tmpfiles.d/stateless-iproute2.conf
	popd
}
