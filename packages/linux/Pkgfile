# Description: The Linux kernel
# URL:         https://www.kernel.org/
# Maintainer:  protonesso, nagakamira at gmail dot com

name=linux
version=4.18.5
release=1
source=(https://cdn.kernel.org/pub/linux/kernel/v4.x/$name-$version.tar.xz
		x86_64-config)

build() {
	cd $name-$version
	unset LDFLAGS
	make mrproper

	case $BARCH in
		x86_64)
			cp $SRC/x86_64-config .config
			;;
		*)
			echo "Unsupported"
			exit 1
	esac

	make ARCH=$XKARCH CROSS_COMPILE=$CROSS_COMPILE syncconfig
	make ARCH=$XKARCH CROSS_COMPILE=$CROSS_COMPILE
	make ARCH=$XKARCH CROSS_COMPILE=$CROSS_COMPILE INSTALL_MOD_PATH=$PKG/usr modules_install

	mkdir -p $PKG/boot
	case $BARCH in
		x86_64)
			cp arch/x86/boot/bzImage $PKG/boot/vmlinuz
			;;
		*)
			echo "Unsupported"
			exit 1
	esac
}
