# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=bison
pkgver=3.3
pkgrel=1
pkgdesc="The GNU general-purpose parser generator"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="https://www.gnu.org/software/bison/bison.html"
license=('GPL')
depends=('musl' 'm4' 'byacc' 'bash')
source=("http://ftpmirror.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.xz")
md5sums=('7a8aae8e8db86180fb2f3d853d147e31')

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--prefix='' \
		--datadir=/share \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install

	rm -rf "$pkgdir"/bin/yacc
}
