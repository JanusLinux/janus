# Description: Default file manager for GNOME
# URL:         https://wiki.gnome.org/Apps/Nautilus
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  meson appstream-glib bubblewrap gnome-autoar gnome-desktop libnotify libseccomp tracker-miners desktop-file-utils libexif
# Section:     gnome

name=nautilus
version=3.38.1
case $version in
	*.*.*.*) _v=${version%.*}
		_v=${_v%.*};;
	*.*.*) _v=${version%.*};;
esac
release=1
source=("http://ftp.gnome.org/pub/gnome/sources/$name/${_v}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	mkdir -p build
	cd build
	ataraxia-meson "$SRC"/$name-$version \
		-Dpackagekit=false \
		-Dselinux=false
	samu
	DESTDIR="$PKG" samu install
}
