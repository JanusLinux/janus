# Description: Tool to manipulate IntelÂ® IA-32/X86-64 microcode bundles
# URL:         https://gitlab.com/iucode-tool/iucode-tool/wikis/home
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  libuargp
# Section:     hardware

name=iucode-tool
version=2.3.1
release=1
source=("https://gitlab.com/iucode-tool/releases/raw/master/${name}_${version}.tar.xz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/iucode-tool/0001-fix-rpl_realloc.patch

	./autogen.sh
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sbindir=/usr/bin
	make
	make DESTDIR="$PKG" install
}
