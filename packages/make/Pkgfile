# Description: The GNU make utility to maintain groups of programs
# URL:         http://www.gnu.org/software/make
# Maintainer:  protonesso, nagakamira at gmail dot com

name=make
version=4.2.1
release=1
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.bz2
	fix-atexit-exit.patch
	fix-glob-dtype.patch)

build() {
	cd $name-$version
	patch -Np1 -i $SRC/fix-atexit-exit.patch
	patch -Np1 -i $SRC/fix-glob-dtype.patch
	./configure \
		--prefix=/usr \
		--build=$(cc -dumpmachine)
	make
	make DESTDIR=$PKG install

	ln -sf make $PKG/usr/bin/gmake

	clean-package $PKG
}
