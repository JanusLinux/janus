# Description: Configuration tools for Linux networking
# URL:         http://net-tools.sourceforge.net/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Priority:    required
# Section:     net

name=net-tools
version=20200822
release=1
options=('bootstrap')
source=("https://github.com/ataraxialinux/storage/raw/master/serun.tar.gz")

build() {
	cd "$SRC"/net-tools-code-$version
	yes "" | make config
	make
	make \
		BINDIR=/usr/bin SBINDIR=/usr/sbin \
		DESTDIR="$PKG" install

	mv "$PKG"/usr/sbin/* "$PKG"/usr/bin/
	rm -rf "$PKG"/usr/sbin

	rm -rf \
		"$PKG"/usr/bin/dnsdomainname \
		"$PKG"/usr/bin/hostname \
		"$PKG"/usr/bin/ifconfig \
		"$PKG"/usr/share/man/man1/dnsdomainname.1 \
		"$PKG"/usr/share/man/man1/hostname.1
}
