# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=net-tools
pkgver=aebd88ef8d6e15f673b62a649a50d07ed727c888
pkgrel=1
pkgdesc="Configuration tools for Linux networking"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="http://net-tools.sourceforge.net/"
license=('GPL')
depends=('musl')
options=('!makeflags')
source=("https://github.com/protonesso/net-tools/archive/$pkgver.tar.gz")
md5sums=('8862c662e9456566e50cab226d570810')

prepare() {
	cd "$srcdir"/$pkgname-$pkgver
	sed -i "s#/sbin#/bin#" Makefile
	sed -i "s#/usr##" man/Makefile
}

build() {
	cd "$srcdir"/$pkgname-$pkgver
	yes "" | make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" update

	rm "$pkgdir"/bin/{nis,yp}domainname
}
