# Description: An enhanced multi-threaded syslogd
# URL:         https://www.rsyslog.com/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  zlib libfastjson libestr librelp liblogging util-linux curl
# Section:     admin

name=rsyslog
version=8.2012.0
release=1
backup=('etc/rsyslog.conf')
source=("http://www.rsyslog.com/files/download/$name/$name-$version.tar.gz")

build() {
	append-cflags "-I$STUFF/include"

	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--with-systemdsystemunitdir=/usr/lib/systemd/system \
		--enable-imfile \
		--enable-imjournal \
		--enable-impstats \
		--enable-imptcp \
		--enable-inet \
		--enable-mail \
		--enable-omjournal \
		--enable-omprog \
		--enable-relp \
		--disable-debug-symbols \
		--disable-generate-man-pages \
		--disable-gnutls \
		--disable-libgcrypt \
		--disable-mysql \
		--disable-pgsql
	make
	make DESTDIR="$PKG" install

	install -Dm0644 "$STUFF"/rsyslog/rsyslog.conf "$PKG"/etc/rsyslog.conf
	mkdir -p "$PKG"/var/spool/rsyslog
}
