name=bootstrap-scripts
version=2018.07.28
release=1
BOOTSTRAP=yes

build() {
	mkdir -p $PKG/usr/bin
	cp $KEEP/build-final-system $PKG/usr/bin/build-final-system

	for file in getconf getent iconv; do
		$CC $CFLAGS -no-pie -fno-PIE -fstack-protector-all $LDFLAGS -static $KEEP/musl/${file}.c -o $PKG/usr/bin/$file
	done
}
