# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=dropbear
pkgver=2018.76
pkgrel=1
pkgdesc="Lightweight SSH server"
arch=('x86_64' 'i686' 'aarch64' 'armv7l')
url="https://matt.ucc.asn.au/dropbear/dropbear.html"
license=('MIT')
groups=('base')
depends=('musl' 'zlib')
source=("https://matt.ucc.asn.au/dropbear/releases/$pkgname-$pkgver.tar.bz2")

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure \
		--prefix=/usr \
		--bindir=/usr/bin \
		--sbindir=/usr/bin \
		--build=$XHOST \
		--host=$XTARGET
	make PROGRAMS="dropbear dbclient dropbearkey dropbearconvert scp"
}

package() {
	unset MAKEFLAGS
	cd "$srcdir/$pkgname-$pkgver"
	make PROGRAMS="dropbear dbclient dropbearkey dropbearconvert scp" DESTDIR=$pkgdir install

	msg "Stripping package $pkgname..."
	find $pkgdir -type f | xargs file 2>/dev/null | grep "LSB executable"       | cut -f 1 -d : | xargs $STRIP --strip-all			2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "shared object"        | cut -f 1 -d : | xargs $STRIP --strip-unneeded		2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "current ar archive"   | cut -f 1 -d : | xargs $STRIP --strip-debug		2>/dev/null || true
	cd $pkgdir
	rm -rf usr/{,local/}{,share/}{doc,misc,info,locale} usr{,/local}{,/share},opt/*}/{man,info} usr/{,local/}{,share/}{doc,gtk-doc} opt/*/{doc,gtk-doc}
	rm -rf $pkgdir/{,usr/}lib/charset.alias
}
