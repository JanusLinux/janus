# Description: GTK+ Web content engine library
# URL:         https://webkitgtk.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  cmake samurai gtk3 gst-plugins-bad icu libgudev libsecret libsoup libwebp openjpeg ruby sqlite enchant geoclue libnotify woff2 hyphen wpebackend-fdo libseccomp bubblewrap xdg-dbus-proxy libgcrypt
# Section:     gnome

name=webkitgtk
version=2.30.4
release=2
source=("https://webkitgtk.org/releases/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/webkitgtk/fix-fast-memory-disabled.patch
	patch -Np1 -i "$STUFF"/webkitgtk/musl-fixes.patch

	mkdir -p build
	cd build
	cmake "$SRC"/$name-$version \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DLIBEXEC_INSTALL_DIR=/usr/lib \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_SKIP_RPATH=ON \
		-DENABLE_GTKDOC=OFF \
		-DPORT=GTK \
		-DUSE_LD_GOLD=OFF \
		-Wno-dev -G Ninja
	samu
	DESTDIR="$PKG" samu install
}
