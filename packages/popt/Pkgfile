# Description: A commandline option parser
# URL:         http://rpm5.org
# Maintainer:  nee-san, nagakamira at gmail dot com

name=popt
version=1.16
release=1
source=("http://rpm5.org/files/$name/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	cp "$KEEP"/config.guess config.guess
	cp "$KEEP"/config.sub config.sub

	./configure $BUILDFLAGS \
		--prefix=''
	make
	make DESTDIR="$PKG" install
}
