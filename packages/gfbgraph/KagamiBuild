# Description: GLib/GObject wrapper for the Facebook Graph API
# URL:         https://wiki.gnome.org/Projects/GFBGraph
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  gtk-doc gnome-online-accounts rest
# Section:     gnome

name=gfbgraph
version=0.2.4
release=2
source=("https://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version

	PATH=/usr/bin/gtk-doc-bin:$PATH \
	autoreconf -vi
	./configure $BUILDFLAGS \
		--prefix=/usr
	make
	make DESTDIR="$PKG" libgfbgraphdocdir=/usr/share/doc/$name install

	# for easier removal
	rm -rf "$PKG"/usr/share/doc/$name
}
