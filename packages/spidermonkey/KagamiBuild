# Description: JavaScript interpreter and libraries
# URL:         https://www.mozilla.org/js/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  autoconf2.13 python2 yasm zlib readline libffi nspr icu
# Section:     interpreters

name=spidermonkey
version=68.12.0
release=1
source=("https://archive.mozilla.org/pub/firefox/releases/${version}esr/source/firefox-${version}esr.source.tar.xz")

build() {
	export SHELL=/usr/bin/bash
	export PYTHON=/usr/bin/python2

	cd "$SRC"/firefox-${version}
	sed '21,+4d' -i js/moz.configure

	cd "$SRC"
	mkdir build
	cd build

	LLVM_OBJDUMP=/bin/false \
	"$SRC"/firefox-${version}/js/src/configure  \
		--prefix=/usr \
		--with-intl-api \
		--with-system-icu \
		--with-system-nspr \
		--with-system-zlib \
		--enable-ctypes \
		--enable-hardening \
		--enable-optimize \
		--enable-readline \
		--enable-release \
		--enable-shared-js \
		--enable-system-ffi \
		--enable-unaligned-private-values \
		--disable-debug \
		--disable-debug-symbols \
		--disable-jemalloc \
		--disable-strip \
		--disable-tests \
		--host=$XTARGET \
		--target=$XTARGET
	make
	make DESTDIR="$PKG" install

	rm -rf "$PKG"/usr/lib/libjs_static.ajs
}
