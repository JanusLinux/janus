# Description: JavaScript interpreter and libraries
# URL:         https://www.mozilla.org/js/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  autoconf2.13 python yasm zlib libffi nspr icu
# Section:     interpreters

name=spidermonkey
version=78.3.0
release=1
source=("https://archive.mozilla.org/pub/firefox/releases/${version}esr/source/firefox-${version}esr.source.tar.xz")

build() {
	export LDFLAGS="-Wl,-z,stack-size=1048576"

	export SHELL=/usr/bin/bash
	export PYTHON=/usr/bin/python3

	cd "$SRC"/firefox-${version}
	patch -Np1 -i "$STUFF"/spidermonkey/js-no-rust.patch

	cd "$SRC"
	mkdir build
	cd build

	LLVM_OBJDUMP=/bin/false \
	"$SRC"/firefox-${version}/js/src/configure  \
		--prefix=/usr \
		--with-intl-api \
		--with-system-icu \
		--with-system-nspr \
		--with-system-zlib \
		--enable-ctypes \
		--enable-hardening \
		--enable-optimize="$CFLAGS -O2" \
		--enable-release \
		--enable-shared-js \
		--enable-system-ffi \
		--disable-debug \
		--disable-debug-symbols \
		--disable-jemalloc \
		--disable-js-shell \
		--disable-strip \
		--disable-tests \
		--host=$XTARGET \
		--target=$XTARGET

	sed -i 's|$(MAKE) -C shell install|# $(MAKE) -C shell install|g' js/src/Makefile
	make
	make DESTDIR="$PKG" install

	rm -rf "$PKG"/usr/lib/libjs_static.ajs
}
