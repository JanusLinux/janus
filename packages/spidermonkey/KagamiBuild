# Description: JavaScript interpreter and libraries
# URL:         https://www.mozilla.org/js/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  autoconf2.13 python rust yasm zlib libffi nspr icu
# Section:     interpreters

name=spidermonkey
version=78.2.0
release=1
source=("https://archive.mozilla.org/pub/firefox/releases/${version}esr/source/firefox-${version}esr.source.tar.xz")

build() {
	case $BARCH in
		x86_64)
			export RUST_TARGET="x86_64-gentoo-linux-musl"
			;;
		i686)
			export RUST_TARGET="i686-gentoo-linux-musl"
			;;
		*)
			echo "Architecture is not set or is not supported by Rust Language"
			exit 1
	esac

	export SHELL=/usr/bin/bash
	export PYTHON=/usr/bin/python3

	cd "$SRC"/firefox-${version}
	#patch -Np1 -i "$STUFF"/spidermonkey/js-no-rust.patch
	patch -Np1 -i "$STUFF"/spidermonkey/fix-rust-target.patch

	cd "$SRC"
	mkdir build
	cd build

	LLVM_OBJDUMP=/bin/false \
	"$SRC"/firefox-${version}/js/src/configure  \
		--prefix=/usr \
		--with-intl-api \
		--with-system-icu \
		--with-system-nspr \
		--with-system-zlib \
		--enable-ctypes \
		--enable-hardening \
		--enable-optimize \
		--enable-release \
		--enable-shared-js \
		--enable-system-ffi \
		--disable-debug \
		--disable-debug-symbols \
		--disable-jemalloc \
		--disable-js-shell \
		--disable-strip \
		--disable-tests \
		--host=$XTARGET \
		--target=$XTARGET
	make
	make DESTDIR="$PKG" install

	rm -rf "$PKG"/usr/lib/libjs_static.ajs
}
