# Description: The password hash Argon2, winner of PHC
# URL:         https://github.com/P-H-C/phc-winner-argon2
# Maintainer:  nee-san, nagakamira at gmail dot com

name=argon2
version=20171227
release=1
source=("https://github.com/P-H-C/phc-winner-argon2/archive/$version/$name-$version.tar.gz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/phc-winner-$name-$version
	cp "$STUFF"/argon2/libargon2.pc libargon2.pc
	sed -i -e "s/@UPSTREAM_VER@/${version}/" libargon2.pc

	make CFLAGS="$CFLAGS" OPTTARGET=none
	make CFLAGS="$CFLAGS" OPTTARGET=none DESTDIR="$PKG" install

	install -D -m0644 libargon2.pc "$PKG"/usr/lib/pkgconfig/libargon2.pc
}
