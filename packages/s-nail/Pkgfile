# Description: Mail processing system with a command syntax reminiscent of ed
# URL:         http://www.sdaoden.eu/code.html#s-nail
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  openssl

name=s-nail
version=14.9.11
release=1
source=(http://www.sdaoden.eu/downloads/$name-$version.tar.xz)

build() {
	cd $name-$version
	make \
		VAL_PREFIX=/usr \
		VAL_SYSCONFDIR=/etc \
		VAL_LIBEXECDIR=/usr/lib \
		VAL_MAIL=/var/spool/mail \
		VAL_SID= VAL_MAILX=mail \
		OPT_AUTOCC=0 \
		config
	make MAKEJOBS=--jobs build
	make DESTDIR=$PKG install

	ln -sf mail $PKG/usr/bin/mailx

	clean-package $PKG
}
