# Description: Low level core library
# URL:         https://wiki.gnome.org/Projects/GLib
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  meson zlib pcre util-linux libffi
# Section:     libs

name=glib
version=2.66.3
release=3
options=('~emptydirs')
source=("https://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz"
	"glib-schemas.trigger"
	"gio-modules.trigger"
	"update-glib-schemas"
	"update-gio-modules")

build() {
	cd "$SRC"/$name-$version
	mkdir -p build
	cd build
	ataraxia-meson "$SRC"/$name-$version \
		-Ddoc=false \
		-Dman=false \
		-Dselinux=disabled
	samu
	DESTDIR="$PKG" samu install

	for i in "$SRC"/update-*; do install -Dm755 "$i" "$PKG"/usr/bin/$(basename $i); done
	for i in "$SRC"/*.trigger; do install -Dm755 "$i" "$PKG"/usr/lib/hydra/triggers/$(basename $i); done
}
