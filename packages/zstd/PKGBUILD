# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=zstd
pkgver=1.3.8
pkgrel=1
pkgdesc="Zstandard - Fast real-time compression algorithm"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64el' 'mipsel' 'ppc64le' 'ppc64' 'ppc')
url="http://www.zstd.net/"
license=('BSD-3-Clause GPL-2.0-or-later')
depends=('musl' 'libz' 'xz' 'lz4')
source=("https://github.com/facebook/zstd/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('c261c29f896eb97946c225295485156b')

build() {
	cd "$srcdir"/$pkgname-$pkgver
	unset CPPFLAGS
	make HAVE_PTHREAD=1 HAVE_ZLIB=1 HAVE_LZMA=1 HAVE_LZ4=1 MOREFLAGS="-O2"
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make PREFIX='' DESTDIR="$pkgdir" install
}
