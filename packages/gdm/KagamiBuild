# Description: Display manager and login screen
# URL:         https://wiki.gnome.org/Projects/GDM
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  meson audit pam accountsservice gtk3 iso-codes itstool libcanberra dconf
# Section:     gnome

name=gdm
version=3.38.2.1
case $version in
	*.*.*.*) _v=${version%.*}
		_v=${_v%.*};;
	*.*.*) _v=${version%.*};;
esac
release=2
backup=('etc/gdm/custom.conf'
	'etc/gdm/PostSession/Default'
	'etc/gdm/PreSession/Default')
source=("https://download.gnome.org/sources/$name/${_v}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/gdm/0001-add-support-Ataraxia-Linux-PAM.patch

	mkdir -p build
	cd build
	ataraxia-meson "$SRC"/$name-$version \
		-Ddbus-sys=/usr/share/dbus-1/system.d \
		-Ddefault-pam-config=ataraxia \
		-Ddefault-path=/usr/local/bin:/usr/local/sbin:/usr/bin \
		-Dipv6=true \
		-Dpam-prefix=/usr/lib \
		-Dplymouth=disabled \
		-Dprofiling=true \
		-Drun-dir=/run/gdm \
		-Dselinux=disabled \
		-Dsystemdsystemunitdir=/usr/lib/systemd/system \
		-Dsystemduserunitdir=/usr/lib/systemd/user \
		-Dudev-dir=/usr/lib/udev/rules.d
	samu
	DESTDIR="$PKG" samu install

	rm -rf "$PKG"/run
	install -d -o 120 -g 120 -m 750 "$PKG"/var/lib/gdm
	install -Dm644 "$STUFF"/sysusers.d/gdm.conf "$PKG"/usr/lib/sysusers.d/gdm.conf
}