# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=flex
pkgver=2.6.4
pkgrel=1
pkgdesc="A tool for generating text-scanning programs"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64el' 'mipsel' 'ppc64le' 'ppc64' 'ppc')
url="https://github.com/westes/flex"
license=('BSD and LGPL-2.0-or-later')
depends=('musl' 'm4' 'bash')
source=("https://github.com/westes/flex/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz")
md5sums=('2882e3179748cc9f9c23ec593d6adc8d')

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--prefix='' \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install

	ln -sf flex "$pkgdir"/bin/lex
}
