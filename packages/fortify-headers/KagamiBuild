# Description: Standalone fortify source implementation
# URL:         http://git.2f30.org/fortify-headers/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Section:     devel

name=fortify-headers
version=1.2
release=1
options=('bootstrap')
source=("https://github.com/ataraxialinux/fortify-headers/archive/$version.tar.gz::archive=$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	make PREFIX=/usr DESTDIR="$PKG" install
}
