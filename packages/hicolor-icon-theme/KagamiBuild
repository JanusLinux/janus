# Description: Freedesktop.org Hicolor icon theme
# URL:         https://www.freedesktop.org/wiki/Software/icon-theme/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Section:     x11

name=hicolor-icon-theme
version=0.17
release=1
source=("https://icon-theme.freedesktop.org/releases/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr
	make
	make DESTDIR="$PKG" install

	cat > "$PKG"/usr/bin/update-icon-cache <<-EOF
		#!/usr/bin/sh
		if [ -x '/usr/bin/gtk-update-icon-cache' ]; then
			/usr/bin/gtk-update-icon-cache --force --quiet /usr/share/icons/hicolor
		fi
	EOF

	chmod +x "$PKG"/usr/bin/update-icon-cache
}
