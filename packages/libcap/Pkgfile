# Description: POSIX 1003.1e capabilities
# URL:         http://sites.google.com/site/fullycapable/
# Maintainer:  nee-san, nagakamira at gmail dot com
# Depends on:  attr

name=libcap
version=2.26
release=1
source=("https://kernel.org/pub/linux/libs/security/linux-privs/libcap2/$name-$version.tar.xz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/$name-$version
	sed -i "/SBINDIR/s#sbin#bin#" Make.Rules
	sed -i 's/CFLAGS :=/CFLAGS +=/g' Make.Rules
	sed -i 's/LDFLAGS :=/LDFLAGS +=/g' Make.Rules
	sed -i 's,BUILD_GPERF := ,BUILD_GPERF := no #,' Make.Rules
	sed -i 's@/usr/bin/bash@/usr/bin/sh@g' progs/capsh.c

	if [ "$CROSS" = "yes" ]; then
		make PAM_CAP=no BUILD_CC="$HOSTCC" CC="$CC" CFLAGS="$CFLAGS" KERNEL_HEADERS="$ROOTFS"/usr/include
	else
		make PAM_CAP=no BUILD_CC="$HOSTCC" CC="$CC" CFLAGS="$CFLAGS" KERNEL_HEADERS=/usr/include
	fi

	make prefix='' lib=/lib DESTDIR="$PKG" RAISE_SETFCAP=no install
}
