# Description: POSIX 1003.1e capabilities
# URL:         http://sites.google.com/site/fullycapable/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  attr

name=libcap
version=2.25
release=1
source=(https://www.kernel.org/pub/linux/libs/security/linux-privs/libcap2/$name-$version.tar.xz)

build() {
	cd $name-$version
	sed -i "/^CFLAGS/s/-O2/$CFLAGS/" Make.Rules
	sed -i "/SBINDIR/s#sbin#bin#" Make.Rules
	sed -i 's,BUILD_GPERF := ,BUILD_GPERF := no #,' Make.Rules
	sed -i 's@/bin/bash@/bin/sh@g' progs/capsh.c
	make
	make RAISE_SETFCAP=no prefix=/usr lib=/lib DESTDIR=$PKG install
	chmod 755 $PKG/usr/lib/libcap.so
	clean-package $PKG
}
