# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=wpa_supplicant
pkgver=2.6
pkgrel=2
pkgdesc="A utility providing key negotiation for WPA wireless networks"
arch=('x86_64' 'aarch64' 'armhf')
url="http://hostap.epitest.fi/wpa_supplicant"
license=('GPL')
groups=('base')
depends=('musl' 'zlib' 'libressl' 'libnl-tiny')
source=("https://w1.fi/releases/$pkgname-$pkgver.tar.gz"
	'libressl.patch'
	'eloop.patch'
	'wpa_supplicant'
	'wpa_supplicant-log'
	'wpa_supplicant.conf'
	'wifi-setup')
install=$pkgname.install
backup=('etc/wpa_supplicant.conf')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	patch -Np1 -i $srcdir/libressl.patch
	patch -Np1 -i $srcdir/eloop.patch
	cd "$srcdir/$pkgname-$pkgver/$pkgname"
	cp defconfig .config
	sed -i 's,#CONFIG_WPS=y,CONFIG_WPS=y,' .config
	CFLAGS="-D_GNU_SOURCE -I$ROOTFS/usr/include/libnl-tiny \
		-DLIBNL1_COMPAT -DCONFIG_LIBNL20 \
		-D__int32_t=int32_t -D__int16_t=int16_t -D__uint8_t=uint8_t \
		-D__uint32_t=uint32_t -D__uint16_t=uint16_t \
		-include stdint.h $CFLAGS" \
	LDFLAGS="-lz $LDFLAGS" make CC="$CC" CONFIG_LIBNL_TINY=y
}

package() {
	unset MAKEFLAGS
	cd "$srcdir/$pkgname-$pkgver/$pkgname"
	make BINDIR=/usr/bin DESTDIR=$pkgdir install

	install -Dm0755 $srcdir/wifi-setup $pkgdir/usr/bin/wifi-setup

	mkdir -p $pkgdir/etc
	install -m644 $srcdir/wpa_supplicant.conf $pkgdir/etc

	mkdir -p $pkgdir/var/log/wpa_supplicant

	mkdir -p $pkgdir/etc/service/wpa_supplicant/log
	install -Dm0755 $srcdir/wpa_supplicant $pkgdir/etc/service/wpa_supplicant/run
	install -Dm0755 $srcdir/wpa_supplicant-log $pkgdir/etc/service/wpa_supplicant/log/run

	msg "Stripping package $pkgname..."
	find $pkgdir -type f | xargs file 2>/dev/null | grep "LSB executable"       | cut -f 1 -d : | xargs $STRIP --strip-all			2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "shared object"        | cut -f 1 -d : | xargs $STRIP --strip-unneeded		2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "current ar archive"   | cut -f 1 -d : | xargs $STRIP --strip-debug		2>/dev/null || true
	cd $pkgdir
	rm -rf usr/{,local/}{,share/}{doc,man,info,locale} usr{,/local}{,/share},opt/*}/{man,info} usr/{,local/}{,share/}{doc,gtk-doc} opt/*/{doc,gtk-doc}
	rm -rf $pkgdir/{,usr/}lib/charset.alias
}
