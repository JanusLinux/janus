# Description: A library that implements Perl 5-style regular expressions. 2nd version
# URL:         http://www.pcre.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  zlib libedit bzip2
# Section:     libs

name=pcre2
version=10.36
release=2
source=("https://ftp.pcre.org/pub/pcre/$name-$version.tar.bz2")

build() {
	export CFLAGS=${CFLAGS/-fcf-protection=full}
	case "$BARCH" in
		riscv64|s390x)	JIT="--disable-jit"	;;
		*)		JIT="--enable-jit"	;;
	esac

	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		$JIT \
		--enable-pcre2-16 \
		--enable-pcre2-32 \
		--enable-pcre2grep-libbz2 \
		--enable-pcre2grep-libz \
		--enable-pcre2test-libreadline
	make
	make DESTDIR="$PKG" install
}
