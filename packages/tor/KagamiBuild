# Description: Anonymizing overlay network
# URL:         https://www.torproject.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  zlib libressl libevent libseccomp systemd
# Section:     net

name=tor
version=0.4.3.6
release=1
backup=('etc/tor/torrc')
source=("https://dist.torproject.org/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-pic \
		--enable-systemd
	make
	make DESTDIR="$PKG" install

	mv "$PKG"/etc/tor/torrc.sample "$PKG"/etc/tor/torrc

	install -Dm755 "$STUFF"/svc/tor "$PKG"/etc/service/tor/run
	touch "$PKG"/etc/service/tor/.NOLOG
}
