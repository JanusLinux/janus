# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=pkgconf
pkgver=1.6.0
pkgrel=2
pkgdesc="Package compiler and linker metadata toolkit"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="https://github.com/pkgconf/pkgconf"
license=('ISC')
depends=('musl' 'bash')
source=("http://distfiles.dereferenced.org/$pkgname/$pkgname-$pkgver.tar.xz")
md5sums=('0c93492d7f001e5175b0347b5472e86d')

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--prefix='' \
		--sysconfdir=/etc \
		--with-pkg-config-dir="/lib/pkgconfig:/share/pkgconfig" \
		--with-system-libdir="/lib" \
		--with-system-includedir="/include" \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install

	ln -sf pkgconf "$pkgdir"/bin/pkg-config
}
