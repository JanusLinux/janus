# Description: Low-level CSS parser for Python
# URL:         https://pypi.python.org/pypi/tinycss2
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  python-setuptools python-webencodings
# Section:     python

name=python-tinycss2
version=1.1.0
release=1
source=("https://github.com/Kozea/tinycss2/archive/v$version.tar.gz::archive=$name-$version.tar.gz")

build() {
	cd "$SRC"/tinycss2-$version
	python3 setup.py build
	python3 setup.py install --prefix=/usr --root="$PKG" --optimize=1
}
