# Description: A mouse server for the console and xterm
# URL:         https://www.nico.schottelius.org/software/gpm/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  ncurses
# Section:     utils

name=gpm
commit=f04f24dd5ca5c1c13608b144ab66e2ccd47f106a
version=1.20.7
release=5
source=("https://github.com/telmich/gpm/archive/$commit.tar.gz")

build() {
	cd "$SRC"/$name-$commit
	./autogen.sh
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--sysconfdir=/etc
	make MAKEINFO="true"
	touch doc/gpm.info

	make MAKEINFO="true" DESTDIR="$PKG" install

	cd "$PKG"/usr/lib
	ln -sf libgpm.so.2.* libgpm.so
	chmod 0755 "$PKG"/usr/lib/libgpm.so.*

	install -Dm644 "$STUFF"/svc/gpm.service "$PKG"/usr/lib/systemd/system/gpm.service
}
