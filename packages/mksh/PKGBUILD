# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=mksh
pkgver=R56c
pkgrel=1
pkgdesc="The MirBSD Korn Shell - an enhanced version of the public domain ksh"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64' 'mips' 'ppc64le' 'ppc64' 'ppc')
url="https://www.mirbsd.org/mksh.htm"
license=('BSD')
depends=('musl')
install=$pkgname.install
source=("https://www.mirbsd.org/MirOS/dist/mir/mksh/$pkgname-$pkgver.tgz")
md5sums=('4799a9ac6d55871d79ba66713d928663')

build() {
	cd "$srcdir"/$pkgname
	sh Build.sh -r
}

package() {
	cd "$srcdir"/$pkgname
	install -D -m 755 mksh "$pkgdir"/bin/mksh
	install -D -m 644 dot.mkshrc "$pkgdir"/etc/skel/.mkshrc
}
