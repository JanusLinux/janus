# Description: Skinny libtool implementation, written in C
# URL:         http://git.midipix.org/cgit.cgi/slibtool
# Maintainer:  protonesso, nagakamira at gmail dot com

name=slibtool
version=0.5.25
release=1
source=(http://midipix.org/dl/$name/$name-$version.tar.xz
	libtoolize
	ltmain.sh)

build() {
	mkdir -p $PKG/usr/share/libtoolize/{AC_CONFIG_AUX_DIR,AC_CONFIG_MACRO_DIRS}
	mkdir -p $PKG/usr/bin
	install -m755 $SRC/ltmain.sh $PKG/usr/share/libtoolize/AC_CONFIG_AUX_DIR
	install -m755 $SRC/libtoolize $PKG/usr/bin

	cd $name-$version
	./configure \
		--prefix=/usr \
		--build=$(cc -dumpmachine)
	make
	make DESTDIR=$PKG install

	ln -sf rlibtool $PKG/usr/bin/libtool

	clean-package $PKG
}
