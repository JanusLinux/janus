# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=mpc
pkgver=1.1.0
pkgrel=1
pkgdesc="Multiprecision C library"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64' 'mips' 'ppc64le' 'ppc64' 'ppc')
url="http://www.multiprecision.org/"
license=('LGPL-2.1')
depends=('musl' 'mpfr')
source=("http://ftpmirror.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('4125404e41e482ec68282a2e687f6c73')

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--prefix='' \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
}
