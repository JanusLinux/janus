# Description: Library implementation of the Media Transfer Protocol
# URL:         http://libmtp.sourceforge.net/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  libusb
# Section:     libs

name=libmtp
version=1.1.17
altver=$(sed 's|\.|-|g' <<< $version)
release=1
source=("https://github.com/libmtp/libmtp/archive/$name-$altver.tar.gz")

build() {
	cd "$SRC"/$name-$name-$altver
	touch config.rpath

	autoreconf -vif
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--with-udev=/usr/lib/udev
	make
	make DESTDIR="$PKG" install
}
