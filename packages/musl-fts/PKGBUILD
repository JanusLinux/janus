# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=musl-fts
pkgver=1.2.7
pkgrel=1
pkgdesc="Implementation of fts"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="https://github.com/pullmoll/musl-fts"
license=('custom')
depends=('musl')
source=("https://github.com/pullmoll/musl-fts/archive/v$pkgver.tar.gz")
md5sums=('bce0b5de0cf2519a74fbfacead60369d')

prepare() {
	cd "$srcdir"/$pkgname-$pkgver
	./bootstrap.sh
}

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--prefix='' \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
}
