# Description: Standalone mail and news reader from mozilla.org
# URL:         https://www.mozilla.org/thunderbird/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  python cbindgen clang node zip unzip autoconf2.13 dbus-glib gtk3 gtk2 alsa-lib startup-notification nasm yasm icu libevent nspr nss libwebp libvpx
# Section:     web

name=thunderbird
version=78.2.0
release=1
options=('~emptydirs')
source=("https://archive.mozilla.org/pub/$name/releases/${version}/source/$name-${version}.source.tar.xz")

build() {
	export CFLAGS="-g0 -Os -s -fexcess-precision=fast -fomit-frame-pointer -Wl,--as-needed -pipe"
	export CXXFLAGS="-g0 -Os -s -fexcess-precision=fast -fomit-frame-pointer -Wl,--as-needed -pipe"
	export LDFLAGS="-Wl,-rpath,/usr/lib/thunderbird"
	export SHELL=/usr/bin/bash

	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/firefox/fix-fortify-system-wrappers.patch
	patch -Np1 -i "$STUFF"/firefox/fix-tools.patch
	patch -Np1 -i "$STUFF"/firefox/mallinfo.patch
	patch -Np1 -i "$STUFF"/firefox/disable-moz-stackwalk.patch
	patch -Np1 -i "$STUFF"/firefox/fix-webrtc-glibcisms.patch
	patch -Np1 -i "$STUFF"/firefox/fd6847c9416f9eebde636e21d794d25d1be8791d.patch
	patch -Np1 -i "$STUFF"/firefox/sandbox-fork.patch
	patch -Np1 -i "$STUFF"/firefox/sandbox-sched_setscheduler.patch

	cp "$STUFF"/firefox/stab.h toolkit/crashreporter/google-breakpad/src/
	rm -rf browser/extensions/pocket

	cat > mozconfig <<-EOF
		ac_add_options --prefix=/usr
		ac_add_options --enable-alsa
		ac_add_options --enable-application=comm/mail
		ac_add_options --enable-av1
		ac_add_options --enable-calendar
		ac_add_options --enable-dbus
		ac_add_options --enable-default-toolkit=cairo-gtk3-wayland
		ac_add_options --enable-ffmpeg
		ac_add_options --enable-hardening
		ac_add_options --enable-optimize
		ac_add_options --enable-release
		ac_add_options --enable-rust-simd
		ac_add_options --enable-system-ffi
		ac_add_options --enable-system-pixman
		ac_add_options --enable-update-channel=release
		ac_add_options --disable-crashreporter
		ac_add_options --disable-debug-symbols
		ac_add_options --disable-elf-hack
		ac_add_options --disable-eme
		ac_add_options --disable-gold
		ac_add_options --disable-jemalloc
		ac_add_options --disable-necko-wifi
		ac_add_options --disable-official-branding
		ac_add_options --disable-profiling
		ac_add_options --disable-pulseaudio
		ac_add_options --disable-tests
		ac_add_options --disable-updater
		ac_add_options --disable-webrtc
		ac_add_options --with-branding=comm/mail/branding/nightly
		ac_add_options --with-system-ffi
		ac_add_options --with-system-icu
		ac_add_options --with-system-libevent
		ac_add_options --with-system-libvpx
		ac_add_options --with-system-nspr
		ac_add_options --with-system-nss
		ac_add_options --with-system-pixman
		ac_add_options --with-system-png
		ac_add_options --with-system-webp
		ac_add_options --with-system-zlib
		ac_add_options --host=$XTARGET
		ac_add_options --target=$XTARGET
		ac_add_options MOZ_SERVICES_METRICS=
		ac_add_options MOZ_PAY=
		ac_add_options MOZ_SERVICES_HEALTHREPORTER=
		ac_add_options MOZ_SERVICES_FXACCOUNTS=
		ac_add_options MOZ_SERVICES_METRICS=
		ac_add_options MOZ_DATA_REPORTING=
		ac_add_options MOZ_DEVICES=
		ac_add_options MOZ_REQUIRE_SIGNING=
		ac_add_options MOZ_TELEMETRY_REPORTING=
	EOF

	./mach build -j$(nproc)
	DESTDIR="$PKG" ./mach install

	for i in 16 22 24 32 48 64 128 256; do
		install -Dm644 comm/mail/branding/nightly/default$i.png "$PKG"/usr/share/icons/hicolor/${i}x${i}/apps/thunderbird.png
	done

	mkdir -p "$PKG"/usr/bin/
	ln -sf /usr/lib/thunderbird/thunderbird "$PKG"/usr/bin/thunderbird

	mkdir -p "$PKG"/usr/share/applications/
	cat > "$PKG"/usr/share/applications/thunderbird.desktop <<-EOF
[Desktop Entry]
		Name=Daily
		Comment=Mail & News Reader
		GenericName=Mail Client & News Reader
		Exec=thunderbird %u
		Terminal=false
		Type=Application
		Icon=thunderbird
		Categories=Network;Email;
		MimeType=application/xhtml+xml;text/xml;application/xhtml+xml;application/xml;application/rss+xml;x-scheme-handler/mailto;
		StartupNotify=true
	EOF
}

