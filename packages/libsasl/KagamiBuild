# Description: Cyrus Simple Authentication Service Layer 
# URL:         https://www.cyrusimap.org/sasl/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  pam gdbm libressl krb5 sqlite
# Section:     libs

name=libsasl
version=2.1.27
release=2
source=("https://github.com/cyrusimap/cyrus-sasl/releases/download/cyrus-sasl-$version/cyrus-sasl-$version.tar.gz")

build() {
	local i

	cd "$SRC"/cyrus-sasl-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sbin=/usr/bin \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--with-devrandom=/dev/urandom \
		--with-dblib=gdbm \
		--enable-login \
		--disable-auth-sasldb
	make -j1
	make DESTDIR="$PKG" install-pkgconfigDATA

	for i in include lib sasldb plugins utils ; do
		pushd "$SRC"/cyrus-sasl-$version/$i
			make DESTDIR="$PKG" install
		popd
	done
}
