# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=ed
pkgver=1.15
pkgrel=1
pkgdesc="A POSIX-compliant line-oriented text editor"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="http://www.gnu.org/software/ed/ed.html"
license=('GPL')
depends=('musl' 'bash')
options=('!emptydirs')
source=("http://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.lz")
md5sums=('d3aaeb5eb032142948d7a2f98a24899b')

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--prefix='' \
		--bindir=/bin \
		--mandir=/share/man \
		--infodir=/share/info \
		--build=$CHOST \
		"CFLAGS=$CFLAGS"
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
}
