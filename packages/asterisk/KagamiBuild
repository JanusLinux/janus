	'etc/asterisk/cdr_syslog.conf'
	'etc/asterisk/cel.conf'
	'etc/asterisk/cel_beanstalkd.conf'
	'etc/asterisk/cel_custom.conf'
	'etc/asterisk/cli.conf'
	'etc/asterisk/cli_aliases.conf'
