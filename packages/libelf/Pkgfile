# Description: A ELF object file access library
# URL:         http://www.mr511.de/software
# Maintainer:  nee-san, nagakamira at gmail dot com

name=libelf
version=0.8.13
release=1
source=("http://www.mr511.de/software/$name-$version.tar.gz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$KEEP"/libelf/libelf-0.8.13-build.patch

	export mr_cv_target_elf=yes

	./configure $BUILDFLAGS \
		--prefix='' \
		--enable-shared \
		--disable-debug
	make
	make -j1 install install-compat \
		prefix="$PKG" \
		libdir="$PKG"/usr/lib
}
