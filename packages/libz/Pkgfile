# Description: A compression/decompression Library
# URL:         https://sortix.org/libz/
# Maintainer:  nee-san, nagakamira at gmail dot com

name=libz
version=1.2.8.2015.12.26
release=1
source=("https://sortix.org/libz/release/$name-$version.tar.gz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/$name-$version

	CFLAGS="$CFLAGS -O3" \
	./configure $BUILDFLAGS \
		--prefix=/usr
	make
	make DESTDIR="$PKG" install
}
