# Description: The Kerberos network authentication system
# URL:         https://web.mit.edu/kerberos/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  perl

name=krb5
version=1.17
release=1
source=("https://kerberos.org/dist/krb5/$version/krb5-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/krb5/libressl.patch

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--localstatedir=/var/lib \
		--with-system-et \
		--with-system-ss \
		--with-system-verto=no \
		--enable-shared \
		--disable-rpath
	make
	make DESTDIR="$PKG" install

	mkdir -p "$PKG"/var/log/kadmind
	mkdir -p "$PKG"/var/log/krb5kdc

	for svc in kadmind krb5kdc; do
		install -Dm0755 "$STUFF"/runit-svc/$svc "$PKG"/etc/service/$svc/run
		install -Dm0755 "$STUFF"/runit-svc/$svc-log "$PKG"/etc/service/$svc/log/run
	done
}
