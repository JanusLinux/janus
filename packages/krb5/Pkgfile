# Description: The Kerberos network authentication system
# URL:         https://web.mit.edu/kerberos/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  perl libressl

name=krb5
version=1.17
release=1
source=("https://kerberos.org/dist/krb5/$version/krb5-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/krb5/0001-fix-build-with-libressl-2.9.patch

	cd src
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--localstatedir=/var/lib \
		--with-system-et=no \
		--with-system-ss=no \
		--with-system-verto=no \
		--enable-shared \
		--disable-rpath
	make
	make DESTDIR="$PKG" install

	mkdir -p "$PKG"/var/log/kadmind
	mkdir -p "$PKG"/var/log/krb5kdc

	for svc in kadmind krb5kdc; do
		install -Dm0755 "$STUFF"/svc/$svc "$PKG"/etc/service/$svc/run
		install -Dm0755 "$STUFF"/svc/$svc-log "$PKG"/etc/service/$svc/log/run
	done
}
