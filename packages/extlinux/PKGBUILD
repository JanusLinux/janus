# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=extlinux
pkgver=6.03
pkgrel=1
pkgdesc="Lightweight Linux bootloaders"
arch=('x86_64' 'i686' 'aarch64' 'armv7l')
url="http://syslinux.org/"
license=('BSH')
groups=('base')
depends=('musl')
source=("https://www.kernel.org/pub/linux/utils/boot/syslinux/syslinux-$pkgver.tar.xz")

build() {
	cd "$srcdir/syslinux-$pkgver"
	sed -i '/#define statfs/d;/#undef statfs/d' libinstaller/linuxioctl.h
	$HOSTCC -Wall "$K"/extlinux-bin2c-replacement.c -o libinstaller/bin2c.pl
	PATH="$PATH:$PWD/libinstaller" make libinstaller CC="$CC" PERL=""
	make -C extlinux \
		CC="$CC" OPTFLAGS="-D_GNU_SOURCE $CFLAGS" LDFLAGS="-static $LDflags"
	make -C linux \
		CC="$CC" OPTFLAGS="-D_GNU_SOURCE $CFLAGS" LDFLAGS="-static $LDflags"
}

package() {
	unset MAKEFLAGS
	cd "$srcdir/syslinux-$pkgver"
	dest="$pkgdir/usr"
	mkdir -p "$dest"/bin
	cp extlinux/extlinux "$dest"/bin
	cp linux/syslinux "$dest"/bin/
	mkdir -p "$dest"/lib/syslinux
	cp mbr/*mbr.bin "$dest"/lib/syslinux/

	msg "Stripping package $pkgname..."
	find $pkgdir -type f | xargs file 2>/dev/null | grep "LSB executable"       | cut -f 1 -d : | xargs $STRIP --strip-all			2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "shared object"        | cut -f 1 -d : | xargs $STRIP --strip-unneeded		2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "current ar archive"   | cut -f 1 -d : | xargs $STRIP --strip-debug		2>/dev/null || true
	cd $pkgdir
	rm -rf usr/{,local/}{,share/}{doc,man,misc,info,locale} usr{,/local}{,/share},opt/*}/{man,info} usr/{,local/}{,share/}{doc,gtk-doc} opt/*/{doc,gtk-doc}
	rm -rf $pkgdir/{,usr/}lib/charset.alias
}
