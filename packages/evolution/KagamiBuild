# Description: Manage your email, contacts and schedule
# URL:         https://wiki.gnome.org/Apps/Evolution
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  cmake samurai intltool yelp-tools evolution-data-server gnome-autoar shared-mime-info webkitgtk bogofilter enchant gnome-desktop gspell highlight libcanberra libgweather libnotify
# Section:     gnome

name=evolution
version=3.38.4
release=1
options=('~emptydirs')
source=("https://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	mkdir -p build
	cd build
	cmake "$SRC"/$name-$version $CMAKEFLAGS \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DLIBEXEC_INSTALL_DIR=/usr/lib \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DENABLE_CONTACT_MAPS=OFF \
		-DENABLE_GTK_DOC=OFF \
		-DENABLE_INSTALLED_TESTS=OFF \
		-DWITH_OPENLDAP=OFF \
		-DENABLE_PST_IMPORT=OFF \
		-DENABLE_SCHEMAS_COMPILE=OFF \
		-DENABLE_SMIME=ON \
		-DENABLE_YTNEF=OFF \
		-Wno-dev -G Ninja
	samu
	DESTDIR="$PKG" samu install
}
