# Description: A utility to simplify ports searching/installing
# URL:         https://crux.nu
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  npkg git

name=prt-get
version=5.19.1
release=1
source=(http://crux.nu/files/prt-get-$version.tar.xz
	prt-get.conf
	reposync)

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--build=$(cc -dumpmachine)
	make
	make DESTDIR=$PKG install

	install -m644 $SRC/prt-get.conf $PKG/etc/
	install -m755 $SRC/reposync $PKG/usr/bin

	clean-package $PKG
}
