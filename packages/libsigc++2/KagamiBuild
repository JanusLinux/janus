# Description: Libsigc++ implements a full callback system for use in widget libraries
# URL:         http://libsigc.sourceforge.net/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  meson perl-xml-parser
# Section:     legacy

name=libsigc++2
version=2.10.4
release=2
options=('~emptydirs')
source=("http://ftp.gnome.org/pub/gnome/sources/libsigc++/${version%.*}/libsigc++-$version.tar.xz")

build() {
	cd "$SRC"/libsigc++-$version
	mkdir -p build
	cd build
	ataraxia-meson "$SRC"/libsigc++-$version \
		-Dbuild-documentation=false
	samu
	DESTDIR="$PKG" samu install
}
