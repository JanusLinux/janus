# Description: A library for bits of crypto UI and parsing
# URL:         https://gitlab.gnome.org/GNOME/gcr
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  gobject-introspection vala json-glib rest telepathy-glib webkitgtk krb5
# Section:     gnome

name=gnome-online-accounts
version=3.38.1
release=1
source=("https://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--enable-backend \
		--enable-imap-smtp \
		--enable-media-server \
		--enable-owncloud \
		--disable-documentation \
		--disable-exchange \
		--disable-facebook \
		--disable-flickr \
		--disable-foursquare \
		--disable-google \
		--disable-gtk-doc \
		--disable-lastfm \
		--disable-windows-live
	make
	make DESTDIR="$PKG" install

	attr -q -s pax.flags -V "em" "$PKG"/usr/lib/goa-daemon
	attr -q -s pax.flags -V "em" "$PKG"/usr/lib/goa-identity-service
}
