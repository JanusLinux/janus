# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=debianutils
pkgver=4.8.6
pkgrel=1
pkgdesc="Miscellaneous utilities specific to Debian and januslinux"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="http://packages.qa.debian.org/d/debianutils.html"
license=('GPL')
depends=('musl' 'bash' 'which')
source=("http://http.debian.net/debian/pool/main/d/${pkgname}/${pkgname}_${pkgver}.tar.xz")
md5sums=('f0f1fa39383815fb7950dcee52be4361')

build() {
	cd "$srcdir"/$pkgname-${pkgver/_/-}
	./configure \
		--prefix='' \
		--sbindir=/bin \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-${pkgver/_/-}
	make DESTDIR="$pkgdir" install

	rm -rf "$pkgdir"/bin/which
}
