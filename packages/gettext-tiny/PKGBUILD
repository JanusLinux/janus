# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=gettext-tiny
pkgver=0.3.1
pkgrel=1
pkgdesc="An internationalisation and localisation system"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
url="https://github.com/sabotage-linux/gettext-tiny"
license=('MIT')
depends=('musl')
source=("http://ftp.barfooze.de/pub/sabotage/tarballs/$pkgname-$pkgver.tar.xz")
md5sums=('0c2b381d37f56c3b122dc7bb3fb5ad1d')

build() {
	cd "$srcdir"/$pkgname-$pkgver
	make LIBINTL=MUSL prefix=''
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make LIBINTL=MUSL prefix='' DESTDIR="$pkgdir" install
}
