# Description: JavaScript interpreter and libraries - Version 52
# URL:         https://developer.mozilla.org/en-US/docs/Mozilla/Projects/SpiderMonkey
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  automake2.13 python2 zlib readline libffi icu nspr

name=mozjs52
version=52.9.0
release=1
source=("https://archive.mozilla.org/pub/firefox/releases/${version}esr/source/firefox-${version}esr.source.tar.xz") # yeah, download firefox source code

build() {
	export CC=gcc
	export CXX=g++
	export PYTHON=/usr/bin/python2
	export SHELL=/bin/bash

	cd "$SRC"/firefox-${version}esr.source/js/src
	./configure \
		--prefix=/usr \
		--with-intl-api \
		--with-system-icu \
		--with-system-nspr \
		--with-system-zlib \
		--enable-pie \
		--enable-readline \
		--enable-release \
		--enable-shared-js \
		--enable-threadsafe \
		--disable-debug \
		--disable-debug-symbols \
		--host=$XTARGET \
		--target=$XTARGET
	make
	make DESTDIR="$PKG" install

	rm "$PKG"/usr/lib/*.ajs
	find "$PKG"/usr/{lib/pkgconfig,include} -type f -exec chmod -c a-x {} +
}
