# Description: The GNU macro processor
# URL:         http://www.gnu.org/software/m4
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  ncurses

name=inetutils
version=1.9.4
release=1
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--libexec=/usr/bin \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-logger \
		--disable-rcp  \
		--disable-rexec \
		--disable-rlogin \
		--disable-rsh \
		--disable-servers \
		--disable-whois \
		--build=$(cc -dumpmachine)
	make
	make DESTDIR=$PKG install
	clean-package $PKG
}
