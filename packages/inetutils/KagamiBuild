# Description: A collection of common network programs
# URL:         http://www.gnu.org/software/inetutils/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  readline libcap
# Priority:    required
# Section:     net

name=inetutils
version=1.9.4
release=2
options=('bootstrap' '~emptydirs')
source=("http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/inetutils/inetutils-1.9-PATH_PROCNET_DEV.patch

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexec=/usr/bin \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-ftp \
		--disable-ftpd \
		--disable-inet \
		--disable-inetd \
		--disable-logger \
		--disable-rcp \
		--disable-rlogin \
		--disable-rlogind \
		--disable-rsh \
		--disable-rshd \
		--disable-talk \
		--disable-talkd \
		--disable-telnetd \
		--disable-tftp \
		--disable-tftpd \
		--disable-whois
	make
	make DESTDIR="$PKG" install
}
