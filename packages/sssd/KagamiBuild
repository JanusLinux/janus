# Description: System Security Services Daemon
# URL:         https://github.com/SSSD/sssd
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  python pcre nss libldap bind c-ares jansson libnl libunistring tevent tdb ldb ding-libs http-parser dbus
# Section:     security

name=sssd
version=2.3.1
altver=$(sed 's|\.|_|g' <<< $version)
release=2
source=("https://github.com/SSSD/sssd/releases/download/sssd-$altver/$name-$version.tar.gz")

build() {
	die "Broken"

	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib/sssd \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-pid-path=/run \
		--with-systemdunitdir=/usr/lib/systemd/system \
		--with-crypto=nss \
		--with-os=fedora \
		--with-python3-bindings \
		--without-manpages \
		--without-nfsv4-idmapd-plugin \
		--without-python2-bindings \
		--without-samba \
		--without-selinux \
		--without-semanage \
		--enable-nsslibdir=/usr/lib \
		--enable-pammoddir=/usr/lib/security \
		--enable-pac-responder \
		--disable-cifs-idmap-plugin
	make
	make DESTDIR="$PKG" install
}
