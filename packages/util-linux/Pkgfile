# Description: Miscellaneous system utilities for Linux
# URL:         http://git.kernel.org/cgit/utils/util-linux/util-linux.git
# Maintainer:  nee-san, nagakamira at gmail dot com
# Depends on:  libz libedit libcap-ng

name=util-linux
pkgmajor=2.33
version=$pkgmajor.1
release=1
source=("https://www.kernel.org/pub/linux/utils/util-linux/v$pkgmajor/$name-$version.tar.xz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		ADJTIME_PATH=/var/lib/hwclock/adjtime \
		--prefix=/usr \
		--libdir=/usr/lib \
		--bindir=/usr/bin \
		--sbindir=/usr/bin \
		--localstatedir=/var \
		--enable-fs-paths-default=/usr/bin \
		--with-btrfs \
		--with-readline \
		--without-python \
		--without-systemd \
		--without-systemdsystemunitdir \
		--enable-kill \
		--enable-mesg \
		--enable-partx \
		--enable-raw \
		--enable-wall \
		--enable-write \
		--disable-chfn-chsh \
		--disable-login \
		--disable-nologin \
		--disable-runuser \
		--disable-setpriv \
		--disable-su
	make
	make DESTDIR="$PKG" install

	cd "$PKG"
	mv usr/sbin/* usr/bin
	mv sbin/* usr/bin
	rm -rf sbin usr/sbin

	mkdir -p var/lib/hwclock
}
