# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=lzo
pkgver=2.10
pkgrel=1
pkgdesc="Portable lossless data compression library"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64el' 'mipsel' 'ppc64le' 'ppc64' 'ppc')
url="http://www.oberhumer.com/opensource/lzo"
license=('GPL')
depends=('musl')
source=("http://www.oberhumer.com/opensource/$pkgname/download/$pkgname-$pkgver.tar.gz")
md5sums=('39d3f3f9c55c87b1e5d6888e1420f4b5')

build() {
	cd "$srcdir"/$pkgname-$pkgver
	CFLAGS="$CFLAGS -DLZO_CFG_NO_SYSCALL=1" \
	./configure \
		--prefix='' \
		--enable-shared \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
}
