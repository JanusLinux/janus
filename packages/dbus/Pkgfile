# Description: Freedesktop.org message bus system
# URL:         https://wiki.freedesktop.org/www/Software/dbus/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  expat python2

name=dbus
version=1.12.12
release=2
source=("https://dbus.freedesktop.org/releases/$name/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib/dbus \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-console-auth-dir=/run/console \
		--with-dbus-daemondir=/usr/bin \
		--with-init-scripts=none \
		--with-system-pid-file=/run/dbus/dbus.pid \
		--with-system-socket=/run/dbus/system_bus_socket \
		--with-session-socket-dir=/tmp \
		--with-dbus-user=messagebus \
		--with-xml=expat \
		--without-systemdsystemunitdir \
		--without-x \
		--enable-inotify \
		--disable-doxygen-docs \
		--disable-selinux \
		--disable-systemd \
		--disable-x11-autolaunch \
		--disable-xml-docs
	make
	make DESTDIR="$PKG" install

	mkdir -p "$PKG"/var/log/dbus

	for svc in dbus; do
		install -Dm0755 "$STUFF"/runit-svc/$svc "$PKG"/etc/service/$svc/run
		install -Dm0755 "$STUFF"/runit-svc/$svc-log "$PKG"/etc/service/$svc/log/run
	done
}
