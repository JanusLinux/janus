# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=lynx
pkgver=2.8.8
_relver=${pkgver}rel.2
pkgrel=1
pkgdesc="A text browser for the World Wide Web"
arch=('x86_64' 'aarch64' 'armhf' 's390x')
url="http://lynx.browser.org/"
license=('GPL')
groups=('base')
depends=('musl' 'zlib' 'ncurses' 'libressl')
source=("http://invisible-mirror.net/archives/lynx/tarballs/${pkgname}${_relver}.tar.bz2"
	'lynx-2.8.8rel.2-ncurses_6.1-1.patch'
	'libressl.patch')
backup=('etc/lynx.cfg')

build() {
	cd "$srcdir/${pkgname}${pkgver//./-}"
	patch -Np1 -i $srcdir/lynx-2.8.8rel.2-ncurses_6.1-1.patch
	patch -Np1 -i $srcdir/libressl.patch
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-ssl \
		--with-zlib \
		--enable-ipv6 \
		--disable-nls \
		--build=$($HOSTCC -dumpmachine)
	make
}

package() {
	unset MAKEFLAGS
	cd "$srcdir/${pkgname}${pkgver//./-}"
	make DESTDIR=$pkgdir install

	msg "Stripping package $pkgname..."
	find $pkgdir -type f | xargs file 2>/dev/null | grep "LSB executable"       | cut -f 1 -d : | xargs $STRIP --strip-all			2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "shared object"        | cut -f 1 -d : | xargs $STRIP --strip-unneeded		2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "current ar archive"   | cut -f 1 -d : | xargs $STRIP --strip-debug		2>/dev/null || true
	cd $pkgdir
	rm -rf usr/{,local/}{,share/}{doc,man,info,locale} usr{,/local}{,/share},opt/*}/{man,info} usr/{,local/}{,share/}{doc,gtk-doc} opt/*/{doc,gtk-doc}
	rm -rf $pkgdir/{,usr/}lib/charset.alias
}
md5sums=('b231c2aa34dfe7ca25681ef4e55ee7e8'
         '18e82a6634ac9e6f39af6d83e9cf775b'
         'e7f8d90f83388abdcda4f103a558209e')
