# Description: Text-based web browser.
# URL:         http://lynx.isc.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  zlib ncurses bzip2 libressl

name=lynx
_distver=2.8.9
_patchver=1
version="${_distver}.${_patchver}"
release=1
source=("http://invisible-mirror.net/archives/lynx/tarballs/${name}${_distver}rel.${_patchver}.tar.gz")

build() {
	cd "$SRC"/lynx${_distver}rel.${_patchver}
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-bzlib \
		--with-ssl \
		--with-zlib \
		--enable-ipv6 \
		--disable-nls
	make
	make DESTDIR="$PKG" install
}
