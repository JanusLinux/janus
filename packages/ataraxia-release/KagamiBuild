# Description: Ataraxia Linux release files
# URL:         https://ataraxialinux.github.io/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Provides:    system-release redhat-release
# Section:     base

name=ataraxia-release
version=20210110
release=1
options=('bootstrap')

build() {
	install -dm755 "$PKG"/usr/lib "$PKG"/etc

	cat > "$PKG"/usr/lib/os-release <<- EOF
		NAME="Ataraxia Linux"
		VERSION="1.0 (Server Edition)"
		ID="ataraxia"
		ID_LIKE="ataraxialinux ataraxia januslinux janus"
		VERSION_ID="1.0"
		PRETTY_NAME="Ataraxia Linux 1.0 (Server Edition)"
		HOME_URL="https://ataraxialinux.github.io/"
		DOCUMENTATION_URL="https://github.com/ataraxialinux/ataraxia/wiki"
		BUG_REPORT_URL="https://github.com/ataraxialinux/ataraxia/issues"
		VARIANT="Server Edition"
		VARIANT_ID=server
	EOF

	cat > "$PKG"/etc/ataraxia-release <<- EOF
		Ataraxia Linux release 1.0 (Server Edition)
	EOF

	ln -sf ataraxia-release "$PKG"/etc/system-release
	ln -sf ataraxia-release "$PKG"/etc/redhat-release
}
