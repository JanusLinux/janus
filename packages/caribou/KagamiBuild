# Description: On screen keyboard implementation
# URL:         http://live.gnome.org/Caribou
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  intltool itstool gobject-introspection pygobject vala gtk3 gtk2 clutter libxklavier libgee libxslt
# Section:     gnome

name=caribou
version=0.4.21
release=1
source=("https://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/caribou/vala.patch

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib/caribou \
		--disable-schemas-compile

	sed -i 's/ -shared / -Wl,--as-needed\0/g' libtool
	make
	make DESTDIR="$PKG" install
}
