# Description: A surrogate ltdl implementation
# URL:         https://git.midipix.org/sltdl/tree/README
# Maintainer:  protonesso, nagakamira at gmail dot com
# Section:     libs

name=sltdl
version=1d3c3c0653bafebed488fb448dd9db168c830fb9
release=1
source=("https://git.midipix.org/sltdl/snapshot/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr
	make
	make DESTDIR="$PKG" install
}
