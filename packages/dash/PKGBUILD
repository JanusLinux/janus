# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=dash
pkgver=0.5.10.2
pkgrel=1
pkgdesc="POSIX compliant shell that aims to be as small as possible"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64' 'mips' 'ppc64le' 'ppc64' 'ppc')
url="http://gondor.apana.org.au/~herbert/dash/"
license=('GPL-2.0-or-later')
depends=('musl' 'libedit')
install=$pkgname.install
source=("http://gondor.apana.org.au/~herbert/$pkgname/files/$pkgname-$pkgver.tar.gz")
md5sums=('8f485f126c05d0ab800e85abfe1987aa')

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--prefix='' \
		--with-libedit \
		--build=$CHOST
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
}
