# Description: Headers of PulseAudio and Jack2 for Pipewire 
# URL:         https://github.com/ataraxialinux/pulsejack-headers
# Maintainer:  protonesso, nagakamira at gmail dot com
# Section:     devel

name=pulsejack-headers
version=201114
release=1
source=("https://github.com/ataraxialinux/pulsejack-headers/archive/$version.tar.gz::archive=$name-$version.tar.gz")
noextract=("$name-$version.tar.gz")

build() {
	mkdir -p "$PKG"
	bsdtar -C "$PKG" -xvf "$SRC"/$name-$version.tar.gz

	pushd "$PKG"
		mv -v $name-$version/* .
	popd

	rm -rvf "$PKG"/$name-$version
	find "$PKG" -type d -exec chmod 755 {} +
}
