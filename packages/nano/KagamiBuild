# Description: Pico editor clone with enhancements
# URL:         https://www.nano-editor.org
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  file ncurses
# Section:     editors

name=nano
version=5.3
release=2
options=('bootstrap')
source=("https://www.nano-editor.org/dist/v5/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-color \
		--enable-nanorc \
		--enable-multibuffer \
		--enable-utf8
	make
	make DESTDIR="$PKG" install

	install -Dm644 doc/sample.nanorc "$PKG"/usr/share/factory/etc/nanorc

	echo 'include /usr/share/nano/*.nanorc' >> "$PKG"/usr/share/factory/etc/nanorc

	install -Dm644 "$STUFF"/stateless.d/nano.conf usr/lib/tmpfiles.d/stateless-nano.conf
}
