# Description: SELinux python tools and libraries
# URL:         https://github.com/SELinuxProject/selinux/wiki
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  python-audit python-ipy python-libselinux python-libsemanage setools
# Section:     security

name=selinux-python
version=3.1
release=1
source=("https://github.com/SELinuxProject/selinux/releases/download/20200710/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	make PYTHON=python3
	make PYTHON=python3 DESTDIR="$PKG" SBINDIR=/usr/bin install
}
