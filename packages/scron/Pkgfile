# Description: Suckless cron daemon
# URL:         http://git.2f30.org/scron
# Maintainer:  protonesso, nagakamira at gmail dot com

name=scron
version=0.4
release=1
source=(http://dl.2f30.org/releases/$name-$version.tar.gz
	scron)

build() {
	cd $name-$version
	sed -i 's|BSD_SOURCE|DEFAULT_SOURCE|g' Makefile
	sed -i 's|^CC|#CC|g' Makefile
	sed -i 's|^CFLAGS|#CFLAGS|g' Makefile
	sed -i 's|^LDFLAGS|#LDFLAGS|g' Makefile

	make

	install -Dm755 scrond $PKG/usr/bin
	install -Dm755 crond $PKG/usr/bin
	install -Dm755 $SRC/scron $PKG/etc/sv/scron/run

	clean-package $PKG
}
