# Description: Userspace components of the audit framework
# URL:         https://people.redhat.com/sgrubb/audit
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  libcap-ng krb5
# Section:     security

name=audit
version=3.0.1
release=2
factory=("/etc/libaudit.conf::NULL::C"
	"/etc/audit/audit-stop.rules::NULL::C"
	"/etc/audit/auditd.conf::NULL::C"
	"/etc/audit/auditsp-remote.conf::NULL::C"
	"/etc/audit/plugins.d/af_unix.conf::NULL::C"
	"/etc/audit/plugins.d/au-remote.conf::NULL::C"
	"/etc/audit/plugins.d/syslog.conf::NULL::C"
	"/var/log/audit::NULL::d")
source=("https://people.redhat.com/sgrubb/$name/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	sed 's|/var/run/auditd.pid|/run/auditd.pid|' -i init.d/auditd.service
	sed 's|/sbin|/usr/bin|' -i init.d/auditd.service

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib/audit \
		--sbindir=/usr/bin \
		--sysconfdir=/etc \
		--without-python \
		--without-python3 \
		--enable-gssapi-krb5=yes \
		--enable-shared=audit \
		--enable-systemd \
		--disable-zos-remote
	make
	make DESTDIR="$PKG" INSTALL='install -p' install

	install -d "$PKG"/var/log/audit

	sed -ri 's|/sbin|/usr/bin|' \
		"$PKG"/etc/audit/*.conf \
		"$PKG"/etc/audit/plugins.d/*.conf \
		"$PKG"/usr/lib/systemd/system/auditd.service

	rm -rf "$PKG"/etc/rc.d "$PKG"/etc/sysconfig
}
