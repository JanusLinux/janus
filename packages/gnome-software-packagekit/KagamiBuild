# Description: GNOME Software Center
# URL:         https://wiki.gnome.org/Apps/Software
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  gnome-software packagekit appdata
# Section:     gnome

name=gnome-software-packagekit
version=3.38.0
release=1
source=("http://ftp.gnome.org/pub/gnome/sources/gnome-software/${version%.*}/gnome-software-$version.tar.xz")

build() {
	local plugindir="$(grep ^plugindir $ROOTFS/usr/lib/pkgconfig/gnome-software.pc | sed -e 's|plugindir=/||')"

	cd "$SRC"/gnome-software-$version
	sed -i "s|subdir('po')|# subdir('po')|" meson.build

	mkdir -p build
	cd build
	ataraxia-meson "$SRC"/gnome-software-$version \
		-Dexternal_appstream=true \
		-Ddefault_featured_apps=true \
		-Dfwupd=false \
		-Dgtk_doc=false \
		-Dmalcontent=false \
		-Dman=false \
		-Dpackagekit=true \
		-Dtests=false \
		-Dvalgrind=false
	samu

	for i in plugins/packagekit/*.so; do
		install -Dm755 $i "$PKG"/$plugindir/$(basename $i)
	done
}
