# Description: iSNS server and client for Linux
# URL:         https://github.com/gonzoleeman/open-isns
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  libressl
# Section:     hardware

name=open-isns
version=0.100
release=1
source=("https://github.com/gonzoleeman/open-isns/archive/v$version.tar.gz::archive=$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$STUFF"/open-isns/libressl.patch
	sed -i 's/-Werror//' configure.ac

	for a in $(find . -name config.sub); do
		cp "$STUFF"/config.sub $a
	done

	for a in $(find . -name config.guess); do
		cp "$STUFF"/config.guess $a
	done

	autoreconf -fi
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--bindir=/usr/bin \
		--sbindir=/usr/bin \
		--enable-shared
	make
	make DESTDIR="$PKG" install install_lib install_hdrs
}
