# Description: GTK+ implementation of wxWidgets API for GUI
# URL:         https://wxwidgets.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  expat libsm libxxf86vm glu libnotify webkitgtk
# Section:     libs

name=wxgtk
version=3.1.3
release=1
options=('~emptydirs')
source=("https://github.com/wxWidgets/wxWidgets/releases/download/v$version/wxWidgets-$version.tar.bz2")

build() {
	cd "$SRC"/wxWidgets-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libdir=/usr/lib \
		--with-gtk=3 \
		--with-libjpeg=sys \
		--with-libpng=sys \
		--with-libtiff=sys \
		--with-libxpm=sys \
		--with-opengl \
		--with-sdl \
		--enable-aui \
		--enable-graphics_ctx \
		--enable-mediactrl \
		--enable-shared \
		--enable-unicode \
		--enable-webview \
		--disable-optimise \
		--disable-rpath
	make
	make DESTDIR="$PKG" install
}
