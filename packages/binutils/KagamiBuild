# Description: Tools necessary to build programs
# URL:         https://www.gnu.org/software/binutils/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  zlib libelf
# Section:     devel

name=binutils
version=2.36
release=1
source=("https://ftp.gnu.org/gnu/$name/$name-$version.tar.xz")

build() {
	local archconfig hashconfig

	case "$BARCH" in
		amd64)	archconfig="--enable-targets=x86_64-pep" ;;
	esac

	case "$BARCH" in
		mips64|mips64el|mips|mipsel)	hashconfig="--enable-default-hash-style=sysv" ;;
		*)				hashconfig="--enable-default-hash-style=gnu"  ;;
	esac

	cd "$SRC"/$name-$version
	mkdir build
	cd build

	../configure $TOOLFLAGS $archconfig $hashconfig \
		--prefix=/usr \
		--with-bugurl="https://github.com/ataraxialinux/ataraxia/issues" \
		--with-pic \
		--with-system-zlib \
		--enable-64-bit-bfd \
		--enable-deterministic-archives \
		--enable-gold \
		--enable-lto \
		--enable-plugins \
		--enable-relro \
		--enable-threads \
		--disable-nls \
		--disable-multilib \
		--disable-werror
	make tooldir=/usr all-gas
	make tooldir=/usr DESTDIR="$PKG" install-gas
}
