# Description: Tools necessary to build programs
# URL:         https://www.gnu.org/software/binutils/
# Maintainer:  nee-san, nagakamira at gmail dot com
# Depends on:  libz

name=binutils
version=2.32
release=1
source=("http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz")
BOOTSTRAP=yes

build() {
	case "$BARCH" in
		mips|mipsel)	HASHCONFIG="--enable-default-hash-style=sysv"	;;
		*)				HASHCONFIG="--enable-default-hash-style=gnu"	;;
	esac

	if [ "$BARCH" = "x86_64" ]; then
		export ARCHCONFIG="--enable-targets=x86_64-pep"
	fi

	cd "$SRC"/$name-$version
	patch -Np1 -i "$KEEP"/binutils/gold-mips.patch

	mkdir build
	cd build

	../configure $TOOLFLAGS $ARCHCONFIG $HASHCONFIG \
		--prefix=/usr \
		--with-bugurl="https://github.com/JanusLinux/janus/issues" \
		--with-lib-path="/usr/lib:/local/usr/lib" \
		--with-pic \
		--with-system-zlib \
		--enable-64-bit-bfd \
		--enable-deterministic-archives \
		--enable-gold \
		--enable-ld=default \
		--enable-lto \
		--enable-plugins \
		--enable-relro \
		--enable-shared \
		--enable-threads \
		--disable-multilib \
		--disable-nls \
		--disable-werror
	make MAKEINFO="true" tooldir=/usr configure-host
	make MAKEINFO="true" tooldir=/usr
	make MAKEINFO="true" tooldir=/usr DESTDIR="$PKG" install

	rm -rf "$PKG"/usr/bin/ld

	for f in "$PKG"/usr/bin/*; do
		ln -sf ${f##*/} "$PKG"/usr/bin/${XTARGET:-${XTARGET}}-${f##*/}
	done

	ln -sf ld.bfd "$PKG"/usr/bin/ld
	ln -sf ld.bfd "$PKG"/usr/bin/$XTARGET-ld
}
