# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=netbsd-curses
pkgver=0.2.2
pkgrel=1
pkgdesc="Lightweight replacement for ncurses"
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64' 'mips' 'ppc64le' 'ppc64' 'ppc')
url="https://github.com/sabotage-linux/netbsd-curses"
license=('custom')
depends=('musl')
source=("http://ftp.barfooze.de/pub/sabotage/tarballs/$pkgname-$pkgver.tar.xz")
md5sums=('1b78ace07280470de05a4b466414acdc')

build() {
	cd "$srcdir"/$pkgname-$pkgver
cat << EOF > config.mak
CC=gcc
HOSTCC=gcc
AR=ar
RANLIB=ranlib
CFLAGS=-fPIC $CFLAGS
LDFLAGS=
PREFIX=''
DESTDIR="$pkgdir"
EOF
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make install
}
