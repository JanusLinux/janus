# Description: Filesystem layout and configuration files
# URL:         https://ataraxialinux.github.io/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Section:     base

name=base-files
version=0.21
release=1
options=('bootstrap')
backup=('etc/fstab'
	'etc/host.conf'
	'etc/hosts'
	'etc/motd'
	'etc/profile'
	'etc/resolv.conf'
	'etc/securetty'
	'etc/shells')

build() {
	cd "$PKG"

	for d in boot dev etc/{skel,profile.d,modprobe.d} usr var run; do
		install -dm755 $d
	done
	install -dm1777 tmp
	install -dm555 proc
	install -dm555 sys

	for f in fstab host.conf hosts motd profile resolv.conf securetty shells; do
		install -m644 "$STUFF"/base-files/$f etc/
	done
	install -m600 "$STUFF"/base-files/crypttab etc/

	for d in local opt empty spool/cron/crontabs; do
		install -dm755 var/$d
	done

	install -dm1777 var/{tmp,spool/mail}

	install -dm775 -g 50 var/games
	ln -sf spool/mail var/mail

	for d in bin games include lib/{modules,firmware} share/misc src; do
		install -dm755 usr/$d
	done

	ln -sf usr/bin bin
	ln -sf usr/bin sbin
	ln -sf bin usr/sbin
	ln -sf usr/lib lib

	install -Dm644 "$STUFF"/base-files/blacklist.conf "$PKG"/etc/modprobe.d/10-blacklist.conf
	install -Dm644 "$STUFF"/base-files/sysctl "$PKG"/usr/lib/sysctl.d/10-default.conf
	install -Dm644 "$STUFF"/sysusers.d/base-files.conf "$PKG"/usr/lib/sysusers.d/base-files.conf
	install -Dm644 "$STUFF"/tmpfiles.d/base-files.conf "$PKG"/usr/lib/tmpfiles.d/base-files.conf

	install -Dm755 "$STUFF"/base-files/zzz "$PKG"/usr/bin/zzz
	install -Dm755 "$STUFF"/base-files/genfstab "$PKG"/usr/bin/genfstab

	cat > "$PKG"/usr/lib/os-release <<- EOF
		NAME="Ataraxia Linux"
		VERSION="1.0"
		ID="ataraxia"
		ID_LIKE="ataraxialinux ataraxia januslinux janus"
		VERSION_ID="1.0"
		PRETTY_NAME="Ataraxia Linux 1.0"
		HOME_URL="https://ataraxialinux.github.io/"
		DOCUMENTATION_URL="https://github.com/ataraxialinux/ataraxia/wiki"
		BUG_REPORT_URL="https://github.com/ataraxialinux/ataraxia/issues"
		VARIANT="Secure Edition"
		VARIANT_ID=secure
	EOF

	cat > "$PKG"/etc/ataraxia-release <<- EOF
		Ataraxia Linux release 1.0
	EOF

	ln -sf ataraxia-release "$PKG"/etc/system-release
	ln -sf ataraxia-release "$PKG"/etc/redhat-release
}
