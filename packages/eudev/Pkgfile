# Description: The userspace dev tools (udev) forked by Gentoo
# URL:         http://www.gentoo.org/proj/en/eudev/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  gperf util-linux kmod

name=eudev
version=3.2.5
release=1
source=(https://dev.gentoo.org/~blueness/eudev/$name-$version.tar.gz)

build() {
	cd $name-$version
	sed -i '/^Libs:/s/-ludev/-ludev -lrt/' src/libudev/libudev.pc.in
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--with-rootprefix=/usr \
		--sysconfdir=/etc \
		--libdir=/usr/lib \
		--libexecdir=/usr/lib \
		--sbindir=/usr/bin \
		--with-rootprefix= \
		--with-firmware-path=/usr/lib/firmware \
		--enable-split-usr \
		--disable-introspection \
		--disable-manpages
	make
	make DESTDIR=$PKG install

	install -d $PKG/usr/lib/{firmware,udev/devices/{pts,shm}}
	install -d $PKG/usr/{lib,bin}
	install -d $PKG/run

	LD_LIBRARY_PATH="$PKG/usr/lib:/usr/local/lib:/usr/lib" \
	$PKG/usr/bin/udevadm hwdb --update --root=$PKG

	clean-package $PKG
}
