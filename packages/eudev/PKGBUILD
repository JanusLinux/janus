# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=eudev
pkgver=3.2.5
pkgrel=1
pkgdesc="The userspace dev tools (udev) forked by Gentoo"
arch=('x86_64' 'i686' 'aarch64' 'armv7l')
url="http://www.gentoo.org/proj/en/eudev/"
license=('GPL')
groups=('base')
depends=('musl' 'util-linux' 'kmod')
backup=('etc/udev/udev.conf')
source=("https://dev.gentoo.org/~blueness/eudev/$pkgname-$pkgver.tar.gz")

build() {
	cd "$srcdir/$pkgname-$pkgver"
	CFLAGS="$CFLAGS -I$ROOTFS/usr/include" \
	BLKID_CFLAGS="-I$ROOTFS/usr/include/blkid" \
	BLKID_LIBS="-L$ROOTFS/usr/lib -lblkid" \
	KMOD_CFLAGS="-I$ROOTFS/usr/include" \
	KMOD_LIBS="-L$ROOTFS/usr/lib -lkmod" \
	./configure \
		--prefix=/usr \
		--with-rootprefix=/usr \
		--sysconfdir=/etc \
		--libdir=/usr/lib \
		--sbindir=/usr/bin \
		--build=$XHOST \
		--host=$XTARGET \
		--with-sysroot=$ROOTFS \
		--with-rootprefix="" \
		--with-firmware-path=/lib/firmware \
		--enable-hwdb \
		--enable-kmod \
		--enable-rule_generator \
		--enable-split-usr \
		--disable-gtk-doc-html \
		--disable-gudev \
		--disable-keymap \
                --disable-introspection \
		--disable-manpages
	make
}

package() {
	unset MAKEFLAGS
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR=$pkgdir install

	msg "Stripping package $pkgname..."
	find $pkgdir -type f | xargs file 2>/dev/null | grep "LSB executable"       | cut -f 1 -d : | xargs $STRIP --strip-all			2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "shared object"        | cut -f 1 -d : | xargs $STRIP --strip-unneeded		2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "current ar archive"   | cut -f 1 -d : | xargs $STRIP --strip-debug		2>/dev/null || true
	cd $pkgdir
	rm -rf usr/{,local/}{,share/}{doc,man,misc,info,locale} usr{,/local}{,/share},opt/*}/{man,info} usr/{,local/}{,share/}{doc,gtk-doc} opt/*/{doc,gtk-doc}
	rm -rf $pkgdir/{,usr/}lib/charset.alias
}
