# Description: Screensaver for MATE
# URL:         https://mate-desktop.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  systemd libmatekbd libnotify libxss mate-desktop mate-session-manager mate-menus
# Section:     mate

name=mate-screensaver
version=1.24.1
release=2
source=("https://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib/mate-screensaver \
		--sysconfdir=/etc \
		--with-xscreensaverdir=/usr/share/xscreensaver/config \
		--with-xscreensaverhackdir=/usr/lib/xscreensaver \
		--with-libnotify \
		--enable-locking \
		--without-console-kit

	sed -i 's/ -shared / -Wl,--as-needed\0/g' libtool
	make
	make DESTDIR="$PKG" install

	mkdir -p "$PKG"/usr/lib/pam.d
	mv "$PKG"/etc/pam.d/* "$PKG"/usr/lib/pam.d/
	rm -rf "$PKG"/etc/pam.d
}
