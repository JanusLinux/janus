# Description: Image manipulation wizard
# URL:         http://www.imagemagick.org/
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  util-linux libxt perl zlib tiff librsvg libpng libjpeg-turbo fontconfig bzip2 lcms libxml2 libx11 libxext

name=imagemagick
version=7.0.8-14
release=2
source=(https://github.com/ImageMagick/ImageMagick/archive/$version.tar.gz)

build() {
	cd ImageMagick-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-hdri \
		--enable-shared \
		--with-dejavu-font-dir=/usr/share/fonts/TTF \
		--with-gs-font-dir=/usr/share/fonts/gsfonts \
		--with-modules \
		--with-threads \
		--with-perl \
		--with-freetype \
		--with-fontconfig \
		--with-jpeg \
		--with-lcms \
		--with-png \
		--with-rsvg \
		--with-tiff \
		--with-x \
		--with-xml \
		--with-zlib \
		--without-autotrace \
		--without-djvu \
		--without-dps \
		--without-fftw \
		--without-fpx \
		--without-gcc-arch \
		--without-gvc
	make
	make DESTDIR=$PKG install

	find $PKG -name '.packlist' -o -name 'perllocal.pod' -o -name '*.bs' -delete

	echo "Stripping $name package..."
	find $PKG -type f | xargs file 2>/dev/null | grep "LSB executable"       | cut -f 1 -d : | xargs $STRIP --strip-all			2>/dev/null || true
	find $PKG -type f | xargs file 2>/dev/null | grep "shared object"        | cut -f 1 -d : | xargs $STRIP --strip-unneeded		2>/dev/null || true
	find $PKG -type f | xargs file 2>/dev/null | grep "current ar archive"   | cut -f 1 -d : | xargs $STRIP --strip-debug			2>/dev/null || true
	find $PKG -type f | xargs file 2>/dev/null | grep "libtool library file" | cut -f 1 -d : | xargs rm -rf					2>/dev/null || true
	cd $PKG
	rm -rf {,usr/}{,local/}{,share/}{doc,man,info,locale} usr{,/local}{,/share},opt/*}/{man,info} usr/{,local/}{,share/}{doc,gtk-doc} opt/*/{doc,gtk-doc}
	rm -rf {,usr/}lib/charset.alias
}
