# Description: Centralized access to appointments and contacts
# URL:         https://wiki.gnome.org/Apps/Evolution
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  cmake samurai gobject-introspection vala db gcr libical libsecret nss sqlite gnome-online-accounts libcanberra liboauth libgweather heimdal
# Section:     gnome

name=evolution-data-server
version=3.38.1
release=1
source=("http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz")

build() {
	cd "$SRC"/$name-$version
	mkdir -p build
	cd build
	cmake "$SRC"/$name-$version \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DLIBEXEC_INSTALL_DIR=/usr/lib \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DENABLE_GOA=ON \
		-DENABLE_GOOGLE=OFF \
		-DENABLE_GTK_DOC=OFF \
		-DENABLE_INSTALLED_TESTS=OFF \
		-DENABLE_INTROSPECTION=ON \
		-DENABLE_VALA_BINDINGS=ON \
		-DWITH_OPENLDAP=OFF \
		-Wno-dev -G Ninja
	samu
	DESTDIR="$PKG" samu install
}
