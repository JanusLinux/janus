# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=grub
pkgver=2.02
pkgrel=1
pkgdesc="GNU GRand Unified Bootloader (2)"
arch=('x86_64')
url="https://www.gnu.org/software/grub/"
license=('GPL')
groups=('base')
depends=('musl')
source=("http://ftpmirror.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.xz"
	'0004-add-GRUB_COLOR_variables.patch'
	'0005-Allow_GRUB_to_mount_ext234_filesystems_that_have_the_encryption_feature.patch'
	'0006-tsc-Change-default-tsc-calibration-method-to-pmtimer-on-EFI-systems.patch'
	'0007-grub-mkconfig_10_linux_Support_multiple_early_initrd_images.patch'
	'0008-Fix-packed-not-aligned-error-on-GCC-8.patch'
	'grub.default')
install=$pkgname.install
options=('!makeflags')
backup=('boot/grub/grub.cfg'
	'etc/default/grub'
	'etc/grub.d/40_custom')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	unset CFLAGS
	unset CPPFLAGS
	unset CXXFLAGS
	unset LDFLAGS
	unset MAKEFLAGS
	patch -Np1 -i $srcdir/0004-add-GRUB_COLOR_variables.patch
	patch -Np1 -i $srcdir/0005-Allow_GRUB_to_mount_ext234_filesystems_that_have_the_encryption_feature.patch
	patch -Np1 -i $srcdir/0006-tsc-Change-default-tsc-calibration-method-to-pmtimer-on-EFI-systems.patch
	patch -Np1 -i $srcdir/0007-grub-mkconfig_10_linux_Support_multiple_early_initrd_images.patch
	patch -Np1 -i $srcdir/0008-Fix-packed-not-aligned-error-on-GCC-8.patch
	./configure \
		--prefix=/usr \
		--bindir=/usr/bin \
		--sbindir=/usr/bin \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--datarootdir=/usr/share \
		--sysconfdir=/etc \
	 	--program-prefix="" \
		--with-bootdir=/boot \
		--with-grubdir=grub \
		--build=$XHOST \
		--host=$XTARGET \
		--enable-boot-time \
		--disable-liblzma \
		--disable-nls \
		--disable-werror
	make
}

package() {
	unset MAKEFLAGS
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR=$pkgdir install

	install -D -m0644 $srcdir/grub.default $pkgdir/etc/default/grub

	msg "Stripping package $pkgname..."
	find $pkgdir -type f | xargs file 2>/dev/null | grep "LSB executable"       | cut -f 1 -d : | xargs $STRIP --strip-all			2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "shared object"        | cut -f 1 -d : | xargs $STRIP --strip-unneeded		2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "current ar archive"   | cut -f 1 -d : | xargs $STRIP --strip-debug		2>/dev/null || true
	cd $pkgdir
	rm -rf usr/{,local/}{,share/}{doc,man,info,locale} usr{,/local}{,/share},opt/*}/{man,info} usr/{,local/}{,share/}{doc,gtk-doc} opt/*/{doc,gtk-doc}
	rm -rf $pkgdir/{,usr/}lib/charset.alias
}
