# Description: EGL External Platform interface
# URL:         https://github.com/NVIDIA/eglexternalplatform
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  mesa
# Section:     x11

name=eglexternalplatform
version=1.1
release=1
source=("https://github.com/NVIDIA/eglexternalplatform/archive/$version.tar.gz::archive=$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	for i in interface/*; do install -Dm644 $i "$PKG"/usr/include/EGL/$(basename $i); done
	for i in *.pc; do install -Dm644 $i "$PKG"/usr/share/pkgconfig/$(basename $i); done
}
