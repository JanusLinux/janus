# Description: Fork of libcurl for GNUnet
# URL:         https://gnunet.org/gnurl
# Maintainer:  protonesso, nagakamira at gmail dot com
# Depends on:  ca-certificates gnutls
# Section:     net

name=gnurl
version=7.70.0
release=1
source=("https://ftp.gnu.org/gnu/gnunet/$name-$version.tar.gz")

build() {
	cd "$SRC"/$name-$version
	./configure $BUILDFLAGS \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--with-ca-bundle=/etc/ssl/certs/ca-certificates.crt \
		--with-gnutls \
		--with-nghttp2 \
		--with-pic \
		--with-random=/dev/urandom \
		--without-gssapi \
		--without-nghttp2 \
		--without-libpsl \
		--without-librtmp \
		--without-libssh \
		--without-ssl \
		--enable-ipv6 \
		--enable-threaded-resolver \
		--enable-versioned-symbols \
		--disable-dict \
		--disable-file \
		--disable-ftp \
		--disable-gopher \
		--disable-imap \
		--disable-ldap \
		--disable-ldaps \
		--disable-manual \
		--disable-ntlm-wb \
		--disable-pop3 \
		--disable-rtsp \
		--disable-smb \
		--disable-smtp \
		--disable-telnet \
		--disable-tftp \
		ac_cv_sizeof_off_t=8
	make
	make DESTDIR="$PKG" install
}
