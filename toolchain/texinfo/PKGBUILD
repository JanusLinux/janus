pkgname=host-texinfo
pkgver=6.5
pkgrel=1
arch=('any')
source=(http://ftpmirror.gnu.org/gnu/texinfo/texinfo-$pkgver.tar.xz
	perl-528-fixes)

prepare() {
	cd "$srcdir"/texinfo-$pkgver
	patch -p1 < "$srcdir"/perl-528-fixes
}

build() {
	cd "$srcdir"/texinfo-$pkgver
	./configure \
		--prefix=''
	make
}

package() {
	cd "$srcdir"/texinfo-$pkgver
	make DESTDIR="$pkgdir" install
}
