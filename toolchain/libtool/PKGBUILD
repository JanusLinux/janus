pkgname=libtool
pkgver=2.4.6
pkgrel=1
arch=('any')
source=("http://ftpmirror.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz")

build() {
	cd $srcdir/$pkgname-$pkgver
	LIBDIR="$ROOTFS/usr/lib" \
	LT_SYS_LIBRARY_PATH="$LIBDIR" \
	./configure \
		--prefix=$TOOLS \
		--with-sysroot=$ROOTFS
	make
}

package() {
	unset MAKEFLAGS
	cd $srcdir/$pkgname-$pkgver
	make install
}
