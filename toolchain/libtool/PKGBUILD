pkgname=libtool
pkgver=2.4.6
pkgrel=1
arch=('any')
source=("http://ftpmirror.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz")

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure \
		--prefix= \
		--with-sysroot=$ROOTFS
	make
}

package() {
	unset MAKEFLAGS
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=$pkgdir install
}
