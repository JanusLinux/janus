pkgname=gcc-final
pkgver=8.1.0
gmpver=6.1.2
mpfrver=4.0.1
mpcver=1.1.0
islver=0.19
pkgrel=1
arch=('any')
source=("http://ftpmirror.gnu.org/gnu/gcc/gcc-$pkgver/gcc-$pkgver.tar.xz"
	"http://ftpmirror.gnu.org/gnu/gmp/gmp-$gmpver.tar.xz"
	"http://www.mpfr.org/mpfr-$mpfrver/mpfr-$mpfrver.tar.xz"
	"http://ftpmirror.gnu.org/gnu/mpc/mpc-$mpcver.tar.gz"
	"http://isl.gforge.inria.fr/isl-$islver.tar.xz"
	"gcc-pure64.patch")
options=(!emptydirs)

prepare() {
	cd $srcdir/gcc-$pkgver
	mv ../gmp-$gmpver gmp
	mv ../mpfr-$mpfrver mpfr
	mv ../mpc-$mpcver mpc
	mv ../isl-$islver isl
	patch -Np1 -i $srcdir/gcc-pure64.patch
	sed -i 's@\./fixinc\.sh@-c true@' gcc/Makefile.in
	sed -i "/ac_cpp=/s/\$CPPFLAGS/\$CPPFLAGS -O2/" {libiberty,gcc}/configure
	mkdir build
}

build() {
	cd $srcdir/gcc-$pkgver
	cd build
	AR="ar" \
	../configure $GCCOPTS \
		--prefix= \
		--build=$XHOST \
		--host=$XHOST \
		--target=$XTARGET \
		--with-sysroot=$ROOTFS \
		--enable-__cxa_atexit \
		--enable-checking=release \
		--enable-default-pie \
		--enable-default-ssp \
		--enable-languages=c,c++,lto \
		--enable-lto \
		--enable-threads=posix \
		--enable-tls \
		--disable-gnu-indirect-function \
		--disable-libmpx \
		--disable-libmudflap \
		--disable-libsanitizer \
		--disable-multilib \
		--disable-nls \
		--disable-werror
	make
}

package() {
	unset MAKEFLAGS
	cd $srcdir/gcc-$pkgver
	cd build
	make DESTDIR=$pkgdir install
}
