name=file
mainver=36
version=5.$mainver
release=1
source=("https://github.com/file/file/archive/FILE5_$mainver.tar.gz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/$name-FILE5_$mainver
	autoreconf -vif

	./configure \
		--prefix="$TOOLS"
	make
	make install

	mkdir -p "$PKG"/var/lib/db
	touch "$PKG"/var/lib/db/installed_${name}
}
