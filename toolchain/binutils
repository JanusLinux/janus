name="binutils-2.30"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://ftp.gnu.org/gnu/binutils/$tarball"

bld() {
	cd $srcdir
	mkdir build
	cd build
	AR="ar" AS="as" \
	../configure \
		--prefix=$TOOLS \
		--host=$XHOST \
		--target=$XTARGET \
		--with-sysroot=$ROOTFS \
		--with-lib-path=$ROOTFS/usr/lib \
		--enable-gold=yes \
		--enable-plugins \
		--enable-threads \
		--disable-multilib \
		--disable-nls \
		--disable-static \
		--disable-werror
	make configure-host $MKOPTS
	make $MKOPTS
	make install
}
