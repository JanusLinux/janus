name=binutils
version=2.32
release=1
source=("http://ftpmirror.gnu.org/gnu/$name/$name-$version.tar.xz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/$name-$version
	patch -Np1 -i "$KEEP"/binutils/gold-mips.patch

	mkdir build
	cd build

	../configure \
		--prefix="$TOOLS" \
		--target=$XTARGET $BINUTILSOPTS \
		--with-bugurl="https://github.com/JanusLinux/janus/issues" \
		--with-sysroot="$ROOTFS" \
		--with-lib-path="$ROOTFS/usr/lib" \
		--with-pic \
		--with-system-zlib \
		--enable-64-bit-bfd \
		--enable-deterministic-archives \
		--enable-gold \
		--enable-ld=default \
		--enable-lto \
		--enable-plugins \
		--enable-relro \
		--enable-threads \
		--disable-multilib \
		--disable-nls \
		--disable-werror
	make MAKEINFO="true" configure-host
	make MAKEINFO="true"
	make MAKEINFO="true" install

	ln -sf $XTARGET-ld.bfd "$TOOLS"/bin/$XTARGET-ld

	mkdir -p "$PKG"/var/lib/db
	touch "$PKG"/var/lib/db/installed_${name}
}
