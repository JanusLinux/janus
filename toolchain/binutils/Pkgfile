name=binutils
version=2.30
release=1
source=(http://ftpmirror.gnu.org/gnu/$name/$name-$version.tar.xz)
BOOTSTRAP=yes

build() {
	cd $name-$version
	mkdir build
	cd build
	../configure \
		--prefix= \
		--target=$XTARGET \
		--with-sysroot=$ROOTFS \
		--with-pic \
		--enable-deterministic-archives \
		--enable-gold \
		--enable-ld=default \
		--enable-lto \
		--enable-plugins \
		--enable-relro \
		--enable-threads \
		--disable-multilib \
		--disable-nls \
		--disable-werror
	make configure-host
	make
	make DESTDIR=$PKG install

	rm -rf $PKG/bin/$XTARGET-ld
	ln -s $XTARGET-ld.bfd $PKG/bin/$XTARGET-ld
}
