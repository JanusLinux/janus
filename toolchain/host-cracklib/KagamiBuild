name=host-cracklib
realpath="$REPO/${name/host-}"
version="$(grep ^version $realpath/KagamiBuild | sed -e 's/version=//g')"
release=1
options=('bootstrap')
source=("https://github.com/cracklib/cracklib/releases/download/v$version/cracklib-$version.tar.gz")

build() {
	cd "$SRC"/cracklib-$version
	./configure \
		--prefix="$TOOLS" \
		--sbindir="$TOOLS"/bin \
		--without-python
	make
	make install
}
