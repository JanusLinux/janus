name=host-binutils
realpath="$REPO/${name/host-}"
version="$(grep ^version $realpath/KagamiBuild | sed -e 's/version=//g')"
release=1
options=('bootstrap')
source=("https://ftp.gnu.org/gnu/binutils/binutils-$version.tar.xz")

build() {
	local archconfig hashconfig build_targets install_targets

	case "$BARCH" in
		x86_64)	archconfig="--enable-targets=x86_64-pep" ;;
	esac

	case "$BARCH" in
		mips64|mips64el|mips|mipsel)	hashconfig="--enable-default-hash-style=sysv" ;;
		*)				hashconfig="--enable-default-hash-style=gnu"  ;;
	esac

	case "$BARCH" in
		riscv64)
			build_targets="all-bfd all-gold all-ld all-gas"
			install_targets="install-bfd install-gold install-ld install-gas"
			;;
		*)
			build_targets="all-bfd all-gold all-gas"
			install_targets="install-bfd install-gold install-gas"
			;;
	esac

	cd "$SRC"/binutils-$version
	mkdir build
	cd build
	../configure \
		--prefix="$TOOLS" \
		--build=$XHOST \
		--host=$XHOST \
		--target=$XTARGET $archconfig $hashconfig \
		--with-bugurl="https://github.com/ataraxialinux/ataraxia/issues" \
		--with-sysroot="$ROOTFS" \
		--with-lib-path="$ROOTFS/usr/lib" \
		--with-pic \
		--with-system-zlib \
		--enable-64-bit-bfd \
		--enable-deterministic-archives \
		--enable-gold \
		--enable-lto \
		--enable-plugins \
		--enable-relro \
		--enable-shared \
		--enable-threads \
		--disable-nls \
		--disable-multilib \
		--disable-werror
	make $build_targets
	make $install_targets
}
