name=host-pkgconf
version=1.5.3
release=1
source=(http://distfiles.dereferenced.org/pkgconf/pkgconf-$version.tar.xz)

build() {
	cd pkgconf-$version
	LDFLAGS="-static" \
	./configure \
		--prefix='' \
		--with-sysroot=$ROOTFS \
		--with-pkg-config-dir="$ROOTFS/tools/lib/pkgconfig:$ROOTFS/tools/share/pkgconfig"
	make
	make DESTDIR=$PKG install
	ln -sf pkgconf $PKG/bin/pkg-config
	ln -sf pkgconf $PKG/bin/$XTARGET-pkg-config
}
