pkgname=pkgconf
pkgver=1.4.2
pkgrel=1
arch=('any')
source=("http://distfiles.dereferenced.org/$pkgname/$pkgname-$pkgver.tar.xz")

build() {
	cd $srcdir/$pkgname-$pkgver
	LDFLAGS="$LDFLAGS -static" \
	./configure \
		--prefix= \
		--with-pc-path="$ROOTFS/usr/lib/pkgconfig:$ROOTFS/usr/share/pkgconfig"
	make LDFLAGS="$LDFLAGS -static"
}

package() {
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=$pkgdir install
	ln -s pkgconf $pkgdir/bin/pkg-config
	ln -s pkgconf $pkgdir/bin/$XTARGET-pkg-config
}
