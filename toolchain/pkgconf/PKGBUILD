pkgname=pkgconf
pkgver=1.5.1
pkgrel=1
arch=('any')
source=("http://distfiles.dereferenced.org/$pkgname/$pkgname-$pkgver.tar.xz")

build() {
	cd $srcdir/$pkgname-$pkgver
	LDFLAGS="-s -static" \
	./configure \
		--prefix= \
		--host=$XTARGET \
		--with-sysroot=$ROOTFS \
		--with-pkg-config-dir="$ROOTFS/usr/lib/pkgconfig:$ROOTFS/usr/share/pkgconfig"
	make
}

package() {
	unset MAKEFLAGS
	cd $srcdir/$pkgname-$pkgver
	make DESTDIR=$pkgdir install
	ln -s pkgconf $pkgdir/bin/pkg-config
	ln -s pkgconf $pkgdir/bin/$XTARGET-pkg-config
}
