name=ncurses
version=6.1-20190216
release=1
source=("ftp://ftp.invisible-island.net/ncurses/current/ncurses-$version.tgz")
BOOTSTRAP=yes

build() {
	cd "$SRC"/$name-$version
	./configure \
		--prefix="$TOOLS" \
		--without-debug
	make -C include
	make -C progs tic

	install -m755 progs/tic "$TOOLS"/bin

	mkdir -p "$PKG"/var/lib/db
	touch "$PKG"/var/lib/db/installed_${name}
}
