name=host-autoconf
realpath="$REPO/${name/host-}"
version="$(grep ^version $realpath/KagamiBuild | sed -e 's/version=//g')"
release=1
options=('bootstrap')
source=("https://ftp.gnu.org/gnu/autoconf/autoconf-$version.tar.xz")

build() {
	cd "$SRC"/autoconf-$version
	./configure \
		--prefix="$TOOLS"
	make
	make install
}
