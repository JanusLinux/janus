# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=libcap
pkgver=2.25
pkgrel=1
pkgdesc="POSIX 1003.1e capabilities"
arch=('x86_64' 'aarch64' 'armhf' 'ppc64le' 's390x')
url="http://sites.google.com/site/fullycapable/"
license=('GPL')
groups=('base')
depends=('musl' 'acl')
source=("https://kernel.org/pub/linux/libs/security/linux-privs/libcap2/libcap-$pkgver.tar.xz")

build() {
	cd "$srcdir/$pkgname-$pkgver"
	sed -i 's,BUILD_GPERF := ,BUILD_GPERF := no #,' Make.Rules
	sed -i "/SBINDIR/s#sbin#bin#" Make.Rules
	make BUILD_CC="$HOSTCC" CC="$CC" CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" \
		prefix=/usr lib=lib PAM_CAP=no
}

package() {
	unset MAKEFLAGS
	cd "$srcdir/$pkgname-$pkgver"
	make prefix=/usr lib=lib DESTDIR=$pkgdir PAM_CAP=no RAISE_SETFCAP=no install
	chmod 0755 $pkgdir/usr/lib/libcap.so.$pkgver

	msg "Stripping package $pkgname..."
	find $pkgdir -type f | xargs file 2>/dev/null | grep "LSB executable"       | cut -f 1 -d : | xargs $STRIP --strip-all			2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "shared object"        | cut -f 1 -d : | xargs $STRIP --strip-unneeded		2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "current ar archive"   | cut -f 1 -d : | xargs $STRIP --strip-debug		2>/dev/null || true
	cd $pkgdir
	rm -rf usr/{,local/}{,share/}{doc,man,misc,info,locale} usr{,/local}{,/share},opt/*}/{man,info} usr/{,local/}{,share/}{doc,gtk-doc} opt/*/{doc,gtk-doc}
	rm -rf $pkgdir/{,usr/}lib/charset.alias
}
md5sums=('6666b839e5d46c2ad33fc8aa2ceb5f77')
