# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=musl
pkgver=1.1.19
pkgrel=1
pkgdesc="The standard C library"
arch=('x86_64' 'aarch64' 'armhf')
url="http://www.musl-libc.org/"
license=('MIT')
groups=('base')
depends=('linux-headers')
source=("http://www.musl-libc.org/releases/$pkgname-$pkgver.tar.gz")
options=("!strip")

if [ "$NATIVE" = "no" ]
then
	export XTARGET="$XTARGET"
else
	export XTARGET="$($HOSTCC -dumpmachine)"
fi

build() {
	cd "$srcdir/$pkgname-$pkgver"
	CROSS_COMPILE=$XTARGET- \
	./configure \
		--prefix=/usr \
		--syslibdir=/usr/lib \
		--enable-optimize
	make
}

package() {
	unset MAKEFLAGS
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR=$pkgdir install

	mkdir -p $pkgdir/usr/bin
	ln -sf /lib/libc.so $pkgdir/usr/bin/ldd

	msg "Stripping package $pkgname..."
	find $pkgdir -type f | xargs file 2>/dev/null | grep "LSB executable"       | cut -f 1 -d : | xargs $XTARGET-strip --strip-all			2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "shared object"        | cut -f 1 -d : | xargs $XTARGET-strip --strip-unneeded		2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "current ar archive"   | cut -f 1 -d : | xargs $XTARGET-strip --strip-debug		2>/dev/null || true
	cd $pkgdir
	rm -rf usr/{,local/}{,share/}{doc,man,info,locale} usr{,/local}{,/share},opt/*}/{man,info} usr/{,local/}{,share/}{doc,gtk-doc} opt/*/{doc,gtk-doc}
	rm -rf $pkgdir/{,usr/}lib/charset.alias
}
