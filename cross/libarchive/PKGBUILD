# Maintainer: protonesso <nagakamira@gmail.com>

pkgname=libarchive
pkgver=3.3.2
pkgrel=1
pkgdesc="Library that can create and read several streaming archive formats"
arch=('x86_64' 'aarch64' 'armhf')
url="http://libarchive.org/"
license=('BSD')
groups=('base')
depends=('musl' 'zlib' 'acl' 'attr' 'bzip2' 'xz' 'libressl')
source=("http://www.libarchive.org/downloads/$pkgname-$pkgver.tar.gz"
	'libressl-2.7.patch')

if [ "$NATIVE" = "no" ]
then
	export CROSSFLAGS="--build=$XHOST --host=$XTARGET"
else
	export CROSSFLAGS="--build=$($HOSTCC -dumpmachine)"
fi

build() {
	cd "$srcdir/$pkgname-$pkgver"
	patch -Np1 -i $srcdir/libressl-2.7.patch
	./configure $CROSSFLAGS \
		--prefix=/usr \
		--libdir=/usr/lib \
		--bindir=/usr/bin \
		--includedir=/usr/include \
		--without-xml2 \
		--without-iconv \
		--without-nettle \
		--without-expat
	make
}

package() {
	unset MAKEFLAGS
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR=$pkgdir install

	msg "Stripping package $pkgname..."
	find $pkgdir -type f | xargs file 2>/dev/null | grep "LSB executable"       | cut -f 1 -d : | xargs $STRIP --strip-all			2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "shared object"        | cut -f 1 -d : | xargs $STRIP --strip-unneeded		2>/dev/null || true
	find $pkgdir -type f | xargs file 2>/dev/null | grep "current ar archive"   | cut -f 1 -d : | xargs $STRIP --strip-debug		2>/dev/null || true
	cd $pkgdir
	rm -rf usr/{,local/}{,share/}{doc,man,info,locale} usr{,/local}{,/share},opt/*}/{man,info} usr/{,local/}{,share/}{doc,gtk-doc} opt/*/{doc,gtk-doc}
	rm -rf $pkgdir/{,usr/}lib/charset.alias
}
