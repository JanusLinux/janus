Subject: [PATCH 2/2] better firstboot

Signed-off-by: Ishimoto Shinobu <nagakamira@gmail.com>
---
 units/systemd-firstboot.service | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/units/systemd-firstboot.service b/units/systemd-firstboot.service
index 9f5c710..8dab79a 100644
--- a/units/systemd-firstboot.service
+++ b/units/systemd-firstboot.service
@@ -12,7 +12,7 @@ Description=First Boot Wizard
 Documentation=man:systemd-firstboot(1)
 DefaultDependencies=no
 Conflicts=shutdown.target
-After=systemd-remount-fs.service
+After=systemd-remount-fs.service systemd-random-seed.service
 Before=systemd-sysusers.service sysinit.target shutdown.target
 ConditionPathIsReadWrite=/etc
 ConditionFirstBoot=yes
@@ -20,7 +20,7 @@ ConditionFirstBoot=yes
 [Service]
 Type=oneshot
 RemainAfterExit=yes
-ExecStart=systemd-firstboot --prompt-locale --prompt-timezone --prompt-root-password
+ExecStart=systemd-firstboot --prompt-keymap --prompt-timezone --prompt-hostname --prompt-root-password
 StandardOutput=tty
 StandardInput=tty
 StandardError=tty
