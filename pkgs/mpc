name="mpc-1.1.0"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="http://ftp.gnu.org/gnu/mpc/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--libexecdir=/usr/libexec \
		--build=$XHOST \
		--host=$XTARGET
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
