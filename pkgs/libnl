name="libnl-3.4.0"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="https://github.com/thom311/libnl/releases/download/libnl3_4_0/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--build=$XHOST \
		--host=$XTARGET
	make $MKOPTS
	make DESTDIR=$ROOTFS install
}
