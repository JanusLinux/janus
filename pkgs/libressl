name="libressl-2.7.1"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://ftp.openbsd.org/pub/OpenBSD/LibreSSL/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--with-openssldir=/etc/ssl \
		--build=$XHOST \
		--host=$XTARGET
	make $MKOPTS
	make DESTDIR=$ROOTFS install
}
