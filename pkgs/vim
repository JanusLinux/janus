name="vim-8.0.586"
srcdir="$SOURCES/$name"
tarball="$name.tar.bz2"
fetchurl="http://ftp.vim.org/pub/vim/unix/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET \
		--with-x=no \
		--enable-multibyte \
		--disable-gui \
		--disable-netbeans \
		--disable-nls
	make $MKOPTS
	make DESTDIR=$ROOTFS install
}
