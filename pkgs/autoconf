name="autoconf-2.69"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://ftpmirror.gnu.org/gnu/autoconf/$tarball"

bld() {
	cd $srcdir
	patch -Np1 -i $KEEP/autoconf-add-musl.patch
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET
	make $MKOPTS
	make DESTDIR=$ROOTFS install
}
