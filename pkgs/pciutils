name="pciutils-3.5.6"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="https://mirrors.edge.kernel.org/pub/software/utils/pciutils/$tarball"

bld() {
	cd $srcdir
	make CFLAGS="-D_GNU_SOURCE -DHAVE_PREAD $CFLAGS" LDFLAGS="$LDFLAGS" \
		PREFIX=/usr SHAREDIR=/usr/share/pciutils/hwdata $MKOPTS \
		CC="$CC" STRIP="$STRIP" HOST=$XTARGET $MKOPTS
	make CFLAGS="-D_GNU_SOURCE -DHAVE_PREAD $CFLAGS" LDFLAGS="$LDFLAGS" \
		PREFIX=/usr SHAREDIR=/usr/share/pciutils/hwdata $MKOPTS \
		CC="$CC" STRIP="$STRIP" HOST=$XTARGET install
}
