name="git-2.16.3"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://mirrors.edge.kernel.org/pub/software/scm/git/$tarball"

bld() {
	cd $srcdir
	make CC="$CC" HOSTCC="$HOSTCC" \
		CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" \
		NEEDS_SSL_WITH_CURL="y" NEEDS_CRYPTO_WITH_SSL="y" NO_PERL="y" \
		NO_CROSS_DIRECTORY_HARDLINKS=1 NO_REGEX="NeedsStartEnd" \
		MAN_BOLD_LITERAL=1 \
		$MKOPTS
	make prefix=/usr gitexecdir=/usr/libexec \
		CC="$CC" HOSTCC="$HOSTCC" \
		CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" \
		NEEDS_SSL_WITH_CURL="y" NEEDS_CRYPTO_WITH_SSL="y" NO_PERL="y" \
		NO_CROSS_DIRECTORY_HARDLINKS=1 NO_REGEX="NeedsStartEnd" \
		MAN_BOLD_LITERAL=1 DESTDIR=$XDESTDIR install
}
