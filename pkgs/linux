name="linux-4.15.12"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://cdn.kernel.org/pub/linux/kernel/v4.x/$tarball"

bld() {
	cd $srcdir
	make mrproper
	make ARCH=$XKARCH INSTALL_HDR_PATH=$ROOTFS/usr headers_install
	find $ROOTFS/usr/include \( -name .install -o -name ..install.cmd \) -delete
}
