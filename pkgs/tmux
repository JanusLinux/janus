name="tmux-2.6"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="https://github.com/tmux/tmux/releases/download/2.6/$tarball"

bld() {
	cd $srcdir
	CFLAGS="-D_GNU_SOURCE -D_BSD_SOURCE $CFLAGS" LDFLAGS="$LDFLAGS" \
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
