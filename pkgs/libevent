name="libevent-2.1.8"
srcdir="$SOURCES/$name-stable"
tarball="$name-stable.tar.gz"
fetchurl="https://github.com/libevent/libevent/releases/download/release-2.1.8-stable/$tarball"

bld() {
	cd $srcdir
	./autogen.sh
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--build=$XHOST \
		--host=$XTARGET
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
