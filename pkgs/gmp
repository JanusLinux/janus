name="gmp-6.1.2"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://ftpmirror.gnu.org/gnu/gmp/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--libexecdir=/usr/libexec \
		--build=$XHOST \
		--host=$XTARGET \
		--enable-cxx
	make $MKOPTS
	make DESTDIR=$ROOTFS install
}
