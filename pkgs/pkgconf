name="pkgconf-1.4.2"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://distfiles.dereferenced.org/pkgconf/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
	ln -s pkgconf $XDESTDIR/usr/bin/pkg-config
}
