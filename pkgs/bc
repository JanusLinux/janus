name="bc-1.07.1"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="http://ftp.gnu.org/gnu/bc/$tarball"

bld() {
	cd $srcdir
	install -m0755 $KEEP/fix-libmath_h bc/fix-libmath_h
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET \
		--with-readline
	echo "MAKEINFO = :" >> doc/Makefile
	make $MKOPTS
	make DESTDIR=$ROOTFS install
}
