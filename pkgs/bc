name="bc-1.06.95"
srcdir="$SOURCES/$name"
tarball="$name.tar.bz2"
fetchurl="http://alpha.gnu.org/gnu/bc/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET \
		--with-readline
	echo "MAKEINFO = :" >> doc/Makefile
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
