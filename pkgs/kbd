name="kbd-2.0.4"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://www.kernel.org/pub/linux/utils/kbd/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-nls \
		--disable-vlock
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
