name="flex-2.6.4"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="http://github.com/westes/flex/releases/download/v2.6.4/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-nls \
		--cache-file=$KEEP/flex.cache
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
