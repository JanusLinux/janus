name="flex-2.6.4"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="http://github.com/westes/flex/releases/download/v2.6.4/$tarball"

bld() {
	cd $srcdir
	ac_cv_func_malloc_0_nonnull=yes \
	ac_cv_func_realloc_0_nonnull=yes \
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-nls
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
