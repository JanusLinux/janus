name="sudo-1.8.22"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="https://www.sudo.ws/dist/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/libexec \
		--build=$XHOST \
		--host=$XTARGET \
		--with-logfac=auth \
		--with-vardir=/var/lib/sudo \
		--with-rundir=/var/run/sudo \
		--without-pam \
		--disable-nls
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
