name="libelf-compat-0.152c001"
srcdir="$SOURCES/$name"
tarball="$name.tar.bz2"
fetchurl="http://ftp.barfooze.de/pub/sabotage/tarballs/$tarball"

bld() {
	cd $srcdir
	echo "CFLAGS += $CFLAGS -fPIC" > config.mak
	sed -i 's@HEADERS = src/libelf.h@HEADERS = src/libelf.h src/gelf.h@' Makefile
	make -j$XJOBS
	make prefix=/usr DESTDIR=$XDESTDIR install
}
