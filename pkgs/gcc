name="gcc-7.3.0"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://ftpmirror.gnu.org/gnu/gcc/$name/$tarball"

bld() {
	export CFLAGS_FOR_TARGET="${CFLAGS}"
	export CXXFLAGS_FOR_TARGET="${CXXFLAGS}"
	export CPPFLAGS_FOR_TARGET="${CXXFLAGS}"
	export LDFLAGS_FOR_TARGET="${LDFLAGS}"

	export CFLAGS_FOR_BUILD="-Os -g0"
	export CPPFLAGS_FOR_BUILD="-Os -g0"
	export CXXFLAGS_FOR_BUILD="-Os -g0"
	export LDFLAGS_FOR_BUILD="-s"

	cd $srcdir
	sed -i 's@\./fixinc\.sh@-c true@' gcc/Makefile.in
	mkdir build
	cd build
	../configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--libexecdir=/usr/libexec \
		--build=$XHOST \
		--host=$XTARGET \
		--target=$XTARGET \
		--with-system-zlib \
		--enable-__cxa_atexit \
		--enable-checking=release \
		--enable-clocale=generic \
		--enable-fully-dynamic-string \
		--enable-languages=c,c++ \
		--enable-libstdcxx-time \
		--enable-lto \
		--enable-threads=posix \
		--enable-tls \
		--disable-bootstrap \
		--disable-gnu-indirect-function \
		--disable-libcilkrts \
		--disable-libitm \
		--disable-libmpx \
		--disable-libmudflap \
		--disable-libsanitizer \
		--disable-libstdcxx-pch \
		--disable-multilib \
		--disable-nls \
		--disable-symvers \
		--disable-werror \
		$GCCOPTS
	make $MKOPTS
	make DESTDIR=$XDESTDIR install

	unset CFLAGS_FOR_TARGET CXXFLAGS_FOR_TARGET CPPFLAGS_FOR_TARGET LDFLAGS_FOR_TARGET
	unset CFLAGS_FOR_BUILD CXXFLAGS_FOR_BUILD CPPFLAGS_FOR_BUILD LDFLAGS_FOR_BUILD
}
