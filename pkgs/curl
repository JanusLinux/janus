name="curl-7.59.0"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://curl.haxx.se/download/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET \
		--target=$XTARGET \
		--without-libidn \
		--with-random=/dev/urandom \
		--with-ssl \
		--enable-ipv6 \
		--disable-ldap
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
