name="xfsprogs-4.15.1"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://mirrors.edge.kernel.org/pub/linux/utils/fs/xfs/xfsprogs/$tarball"

bld() {
	cd $srcdir
	export DEBUG=-DNDEBUG
	export OPTIMIZER="$CFLAGS"
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-gettext
	make SHELL=/bin/bash $MKOPTS
	make DESTDIR=$XDESTDIR install
	unset DEBUG OPTIMIZER
}
