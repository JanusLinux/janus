name="zlib-1.2.11"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://zlib.net/$tarball"

bld() {
	cd $srcdir
	export LD_LIBRARY_PATH="$TOOLS/$XTARGET/lib64:$TOOLS/$XTARGET/lib:$ROOTFS/usr/lib"
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--shared
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
	unset LD_LIBRARY_PATH
}
