name="libarchive-3.3.2"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="http://www.libarchive.org/downloads/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--bindir=/usr/bin \
		--build=$XHOST \
		--host=$XTARGET \
		--without-openssl \
		--without-xml2 \
		--without-iconv \
		--without-nettle \
		--without-expat \
		--with-pic
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
