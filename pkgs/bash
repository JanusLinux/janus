name="bash-4.4.18"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="http://ftpmirror.gnu.org/gnu/bash/$tarball"

bld() {
	cd $srcdir
	_bashconfig=(-DDEFAULT_PATH_VALUE=\'\"/usr/local/sbin:/usr/local/bin:/usr/bin\"\'
			-DSTANDARD_UTILS_PATH=\'\"/usr/bin\"\'
			-DSYS_BASHRC=\'\"/etc/bash.bashrc\"\'
			-DSYS_BASH_LOGOUT=\'\"/etc/bash.bash_logout\"\'
			-DNON_INTERACTIVE_LOGIN_SHELLS)
	CFLAGS="${CFLAGS} ${_bashconfig[@]}" \
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET \
		--without-bash-malloc \
		--with-installed-readline \
		--disable-nls
	make $MKOPTS
	make DESTDIR=$ROOTFS install
	install -Dm644 $KEEP/system.bashrc $ROOTFS/etc/bash.bashrc
	install -Dm644 $KEEP/system.bash_logout $ROOTFS/etc/bash.bash_logout
	install -m644 $KEEP/dot.bashrc $ROOTFS/etc/skel/.bashrc
	install -m644 $KEEP/dot.bash_profile $ROOTFS/etc/skel/.bash_profile
	install -m644 $KEEP/dot.bash_logout $ROOTFS/etc/skel/.bash_logout
}
