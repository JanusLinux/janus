name="readline-7.0"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="http://ftp.gnu.org/gnu/readline/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET
	make SHLIB_LIBS="-L$XDESTDIR/usr/lib -lncursesw" $MKOPTS
	make DESTDIR=$XDESTDIR install
}
