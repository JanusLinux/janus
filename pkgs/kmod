name="kmod-25"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://www.kernel.org/pub/linux/utils/kernel/kmod/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--build=$XHOST \
		--host=$XTARGET \
		--with-xz \
		--with-zlib \
		--disable-manpages
#	sed -i "s,/usr/include,$ROOTFS/usr/include,g" Makefile
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
	mkdir -p $XDESTDIR/usr/bin
	ln -s kmod $XDESTDIR/usr/bin/modinfo
	ln -s kmod $XDESTDIR/usr/bin/depmod
	ln -s kmod $XDESTDIR/usr/bin/insmod
	ln -s kmod $XDESTDIR/usr/bin/lsmod
	ln -s kmod $XDESTDIR/usr/bin/rmmod
	ln -s kmod $XDESTDIR/usr/bin/modprobe
	install -d $XDESTDIR/etc/{modprobe,depmod}.d
}
