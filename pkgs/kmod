name="kmod-25"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://www.kernel.org/pub/linux/utils/kernel/kmod/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-manpages \
		--with-xz \
		--with-zlib
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
