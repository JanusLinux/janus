name="rsync-3.1.3"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="https://download.samba.org/pub/rsync/src/$tarball"

bld() {
	cd $srcdir
	rsync_cv_HAVE_GETTIMEOFDAY_TZ=yes \
	./configure \
		--prefix=/usr \
		--build=$XHOST \
		--host=$XTARGET
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
