name="attr-2.4.47"
srcdir="$SOURCES/$name"
tarball="$name.src.tar.gz"
fetchurl="http://download.savannah.gnu.org/releases/attr/$tarball"

bld() {
	cd $srcdir
	applypatch $KEEP/attr-add-musl-libc.patch
	applypatch $KEEP/fix-headers.patch
	./configure \
		--prefix=/usr \
		--libdir=/lib \
		--libexecdir=/usr/libexec \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-gettext
	make -j1
	make DESTDIR=$XDESTDIR install install-dev install-lib
	chmod 755 $XDESTDIR/usr/lib/libattr.so
}
