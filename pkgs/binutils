name="binutils-2.30"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://ftpmirror.gnu.org/gnu/binutils/$tarball"

bld() {
	cd $srcdir
	mkdir build
	cd build
	../configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--libexecdir=/usr/libexec \
		--build=$XHOST \
		--host=$XTARGET \
		--target=$XTARGET \
		--with-system-zlib \
		--enable-deterministic-archives \
		--enable-gold \
		--enable-ld=default \
		--enable-plugins \
		--enable-shared \
		--disable-multilib \
		--disable-nls \
		--disable-werror
	make configure-host $MKOPTS
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
