name="grub-2.02"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://ftp.gnu.org/gnu/grub/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-nls \
		--disable-werror
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
	mkdir -p $XDESTDIR/etc/default
	rm -rf $XDESTDIR/etc/default/grub
	cp $KEEP/default_grub $XDESTDIR/etc/default/grub
}
