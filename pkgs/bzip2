name="bzip2-1.0.6"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="http://www.bzip.org/1.0.6/$tarball"

bld() {
	cd $srcdir
	applypatch $KEEP/bzip2.patch
	sed -i 's@all: libbz2.a bzip2 bzip2recover test@all: libbz2.a bzip2 bzip2recover@' Makefile
	make $MKOPTS \
		CC="$CC" HOSTCC="$HOSTCC" \
		CFLAGS="$CFLAGS -D_GNU_SOURCE -fPIC" LDFLAGS="$LDFLAGS"
	make PREFIX=$XDESTDIR/usr install
	make -f Makefile-libbz2_so $MKOPTS \
		CC="$CC" HOSTCC="$HOSTCC" \
		CFLAGS="$CFLAGS -D_GNU_SOURCE -fPIC" LDFLAGS="$LDFLAGS"
	make -f Makefile-libbz2_so PREFIX=$XDESTDIR/usr install
}
