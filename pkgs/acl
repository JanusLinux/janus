name="acl-2.2.52"
srcdir="$SOURCES/$name"
tarball="$name.src.tar.gz"
fetchurl="http://download.savannah.gnu.org/releases/acl/$tarball"

bld() {
	cd $srcdir
	applypatch $KEEP/acl-add-musl-libc.patch
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--libexecdir=/usr/libexec \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-gettext
	make -j1
	make DESTDIR=$XDESTDIR install install-dev install-lib
	chmod 755 $XDESTDIR/usr/lib/libacl.so
	rm -rf $XDESTDIR/usr/lib/libacl.la
}
