name="acl-2.2.52"
srcdir="$SOURCES/$name"
tarball="$name.src.tar.gz"
fetchurl="http://download.savannah.gnu.org/releases/acl/$tarball"

bld() {
	cd $srcdir
	applypatch $KEEP/acl-add-musl-libc.patch
	./configure \
		--prefix=/usr \
		--libdir=/lib \
		--libexecdir=/usr/libexec \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-gettext
	make -j1
	make DESTDIR=$ROOTFS install install-dev install-lib
	chmod 755 $ROOTFS/usr/lib/libacl.so
	rm -rf $ROOTFS/usr/lib/libacl.la
}
