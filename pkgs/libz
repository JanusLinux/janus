name="libz-1.2.8.2015.12.26"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="http://sortix.org/libz/release/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--libexecdir=/usr/libexec \
		--build=$XHOST \
		--host=$XTARGET
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
