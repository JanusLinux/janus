name="openssh-7.6p1"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="http://ftp.openbsd.org/pub/OpenBSD/OpenSSH/portable/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc/ssh \
		--libexecdir=/usr/libexec \
		--build=$XHOST \
		--host=$XTARGET \
		--with-mantype=man \
		--with-md5-passwords \
		--with-pid-dir=/run \
		--with-privsep-path=/var/empty \
		--with-privsep-user=nobody \
		--with-ssl-engine
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
