name="wireless_tools.29"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="https://hewlettpackard.github.io/wireless-tools/$tarball"

bld() {
	cd $srcdir
	sed -i s/gcc/\$\{CC\}/g Makefile
	sed -i s/ar/\$\{AR\}/g Makefile
	sed -i s/ranlib/\$\{RANLIB\}/g Makefile
	make CFLAGS="-D_GNU_SOURCE -D_BSD_SOURCE $CFLAGS" PREFIX=/usr $MKOPTS
	make DESTDIR=$ROOTFS install
}
