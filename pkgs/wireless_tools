name="wireless_tools.29"
srcdir="$SOURCES/$name"
tarball="$name.tar.gz"
fetchurl="http://www.hpl.hp.com/personal/Jean_Tourrilhes/Linux/$tarball"

bld() {
	cd $srcdir
	make CC="$CC" HOSTCC="$HOSTCC" \
		CFLAGS="-D_GNU_SOURCE -D_BSD_SOURCE $CFLAGS" \
		LDFLAGS="$LDFLAGS" PREFIX=/usr $MKOPTS
	make DESTDIR=$XDESTDIR install
}
