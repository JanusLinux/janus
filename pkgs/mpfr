name="mpfr-4.0.1"
srcdir="$SOURCES/$name"
tarball="$name.tar.xz"
fetchurl="http://www.mpfr.org/$name/$tarball"

bld() {
	cd $srcdir
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--libexecdir=/usr/libexec \
		--build=$XHOST \
		--host=$XTARGET
	make $MKOPTS
	make DESTDIR=$XDESTDIR install
}
