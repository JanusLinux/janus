pkgname=chroot-mawk
pkgver=1.3.4_20171017
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=("ftp://ftp.invisible-island.net/mawk/mawk-${pkgver/_/-}.tgz")

build() {
	cd "$srcdir"/mawk-${pkgver/_/-}
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd "$srcdir"/mawk-${pkgver/_/-}
	make DESTDIR="$pkgdir" install

	ln -sf mawk "$pkgdir"/tools/bin/awk
}
