pkgname=chroot-gzip
pkgver=1.10
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=("http://ftpmirror.gnu.org/gnu/gzip/gzip-$pkgver.tar.xz")

build() {
	cd "$srcdir"/gzip-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd "$srcdir"/gzip-$pkgver
	make DESTDIR="$pkgdir" install
}
