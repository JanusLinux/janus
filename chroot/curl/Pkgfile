name=chroot-curl
version=7.61.0
release=1
source=(https://curl.haxx.se/download/curl-$version.tar.xz)

build() {
	cd curl-$version
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET \
		--with-ssl \
		--enable-ipv6 \
		--enable-threaded-resolver
	make
	make DESTDIR=$PKG install
}
