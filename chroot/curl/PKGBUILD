pkgname=chroot-curl
pkgver=7.63.0
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64el' 'mipsel' 'ppc64le' 'ppc64' 'ppc')
source=(https://curl.haxx.se/download/curl-$pkgver.tar.xz)

build() {
	cd "$srcdir"/curl-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET \
		--with-pic \
		--with-ssl \
		--enable-ipv6 \
		--enable-unix-sockets \
		--disable-manual
	make
}

package() {
	cd "$srcdir"/curl-$pkgver
	make DESTDIR=$pkgdir install
}
