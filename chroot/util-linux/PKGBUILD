pkgname=chroot-util-linux
pkgmajor=2.33
pkgver=$pkgmajor.1
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=("https://www.kernel.org/pub/linux/utils/util-linux/v$pkgmajor/util-linux-$pkgver.tar.xz")

build() {
	cd "$srcdir"/util-linux-$pkgver
	NCURSESW6_CONFIG=" " \
	NCURSES6_CONFIG=" " \
	NCURSESW5_CONFIG=" " \
	NCURSES5_CONFIG=" " \
	./configure \
		--prefix=/tools \
		--without-python \
		--disable-makeinstall-chown \
		--disable-makeinstall-setuid \
		--disable-nologin \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd "$srcdir"/util-linux-$pkgver
	make DESTDIR="$pkgdir" install

	cd "$pkgdir"/tools
	mv sbin/* bin/
	rm -rf sbin
}
