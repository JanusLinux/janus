name=chroot-libarchive
version=3.3.2
release=1
source=(http://www.libarchive.org/downloads/libarchive-$version.tar.gz)

build() {
	cd libarchive-$version
	./configure \
		--prefix=/tools \
		--libdir=/tools/lib \
		--bindir=/tools/bin \
		--includedir=/tools/include \
		--build=$XHOST \
		--host=$XTARGET \
		--without-xml2 \
		--without-iconv \
		--without-nettle \
		--without-expat
	make
	make DESTDIR=$PKG install
}
