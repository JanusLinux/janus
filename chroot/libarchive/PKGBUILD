pkgname=chroot-libarchive
pkgver=3.3.3
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=("http://www.libarchive.org/downloads/libarchive-$pkgver.tar.gz")

build() {
	cd "$srcdir"/libarchive-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET \
		--without-xml2 \
		--without-iconv \
		--without-nettle \
		--without-expat
	make
}

package() {
	cd "$srcdir"/libarchive-$pkgver
	make DESTDIR="$pkgdir" install

	ln -sf bsdtar "$pkgdir"/tools/bin/tar
	ln -sf bsdcpio "$pkgdir"/tools/bin/cpio
}
