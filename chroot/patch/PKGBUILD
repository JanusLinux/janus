pkgname=chroot-patch
pkgver=2.7.6
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64' 'mips' 'ppc64le' 'ppc64' 'ppc')
source=(http://ftp.gnu.org/gnu/patch/patch-$pkgver.tar.xz)

build() {
	cd "$srcdir"/patch-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd "$srcdir"/patch-$pkgver
	make DESTDIR="$pkgdir" install
}
