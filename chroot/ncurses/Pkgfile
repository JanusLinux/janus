name=chroot-ncurses
version=6.1
release=1
source=(http://ftp.gnu.org/gnu/ncurses/ncurses-$version.tar.gz)

build() {
	cd ncurses-$version
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET \
		--with-build-cc=$HOSTCC \
		--with-shared \
		--without-ada \
		--without-debug \
		--enable-overwrite \
		--disable-nls \
		--disable-stripping
	make
	make DESTDIR=$PKG install
}
