pkgname=chroot-attr
pkgver=2.4.48
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=("http://download.savannah.gnu.org/releases/attr/attr-$pkgver.tar.gz")

build() {
	cd "$srcdir"/attr-$pkgver
	./configure \
		--prefix=/tools \
		--libdir=/tools/lib \
		--libexecdir=/tools/lib \
		--sysconfdir=/tools/etc \
		--build=$XHOST \
		--host=$XTARGET \
		--disable-nls
	make
}

package() {
	cd "$srcdir"/attr-$pkgver
	make DESTDIR=$pkgdir install
}
