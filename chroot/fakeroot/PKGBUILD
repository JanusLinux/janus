pkgname=chroot-fakeroot
pkgver=1.0
pkgrel=1
arch=('any')
source=('fakefakeroot.sh')

build() {
	cd "$srcdir"
	sed -i fakefakeroot.sh \
		-e "s:@SH_PATH:/bin/bash:" \
		-e "s:@VERSION:${pkgver}:" \
		-e "s:@KEY:fakefakeroot key:"
}

package() {
	cd "$srcdir"
	install -Dm0755 fakefakeroot.sh $pkgdir/bin/fakeroot
}
