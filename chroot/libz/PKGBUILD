pkgname=chroot-libz
pkgver=1.2.8.2015.12.26
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=("https://sortix.org/libz/release/libz-$pkgver.tar.gz")

build() {
	cd "$srcdir"/libz-$pkgver
	CFLAGS="$CFLAGS -O2" \
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd "$srcdir"/libz-$pkgver
	make DESTDIR="$pkgdir" install
}
