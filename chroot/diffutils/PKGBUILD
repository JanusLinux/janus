pkgname=chroot-diffutils
pkgver=3.7
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64' 'mips' 'ppc64le' 'ppc64' 'ppc')
source=("https://ftpmirror.gnu.org/gnu/diffutils/diffutils-$pkgver.tar.xz")

build() {
	cd "$srcdir"/diffutils-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd "$srcdir"/diffutils-$pkgver
	make DESTDIR="$pkgdir" install
}
