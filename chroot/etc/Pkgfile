# Description: Bootstrap configuration files
# URL:         https://januslinux.github.io/
# Maintainer:  protonesso, nagakamira at gmail dot com

name=chroot-etc
version=2018.08
release=1
source=(group
	passwd)

build() {
	mkdir -p $PKG/etc

cat > $PKG/etc/profile << "EOF"
PATH="/usr/bin:/tools/bin"
export PATH
EOF

	echo "127.0.0.1 localhost" > $PKG/etc/hosts

	for f in group passwd; do
		install -m644 $SRC/$f $PKG/etc
	done
}
