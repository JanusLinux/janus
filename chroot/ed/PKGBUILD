pkgname=chroot-ed
pkgver=1.14.2
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64el' 'mipsel' 'ppc64le' 'ppc64' 'ppc')
source=("https://ftp.gnu.org/gnu/ed/ed-$pkgver.tar.lz")

build() {
	cd "$srcdir"/ed-$pkgver
	./configure \
		CC="$CC" CXX="$CXX" \
		AR="$AR" AS="$AS" LD="$LD" RANLIB="$RANLIB" READELF="$READELF" STRIP="$STRIP" \
		--prefix=/tools
	make
}

package() {
	cd "$srcdir"/ed-$pkgver
	make DESTDIR="$pkgdir" install
}
