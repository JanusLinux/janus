pkgname=chroot-sbase
pkgver=c30255e50a77f20fb48bed7c700ff32f0d0dc489
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=("https://github.com/protonesso/sbase/archive/$pkgver.tar.gz")

build() {
	cd "$srcdir"/sbase-$pkgver
	make HOSTCC="$HOSTCC" CC="$CC" CFLAGS="$CFLAGS" LDFLAGS='-static'
}

package() {
	cd "$srcdir"/sbase-$pkgver
	make HOSTCC="$HOSTCC" CC="$CC" CFLAGS="$CFLAGS" LDFLAGS='-static' \
		PREFIX='/tools' DESTDIR="$pkgdir" install
}
