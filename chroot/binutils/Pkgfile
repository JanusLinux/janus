name=chroot-binutils
version=2.31.1
release=1
source=(http://ftp.gnu.org/gnu/binutils/binutils-$version.tar.xz
	binutils-ld-fix-static-linking.patch)

build() {
	cd binutils-$version
	patch -Np1 -i $SRC/binutils-ld-fix-static-linking.patch
	sed -i "/ac_cpp=/s/\$CPPFLAGS/\$CPPFLAGS -O2/" libiberty/configure
	if [ "$BARCH" = "x86_64" ]; then
		ARCHCONFIGURE="--enable-targets=x86_64-pep"
	fi
	mkdir build
	cd build
	../configure $ARCHCONFIGURE \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET \
		--target=$XTARGET \
		--with-bugurl=https://github.com/JanusLinux/janus/issues \
		--with-lib-path=/usr/lib \
		--with-pic \
		--with-system-zlib \
		--enable-64-bit-bfd \
		--enable-deterministic-archives \
		--enable-gold=yes \
		--enable-plugins \
		--enable-relro \
		--enable-shared \
		--enable-threads \
		--disable-multilib \
		--disable-nls \
		--disable-werror
	make MAKEINFO="true"
	make MAKEINFO="true" DESTDIR=$PKG install

	rm -rf $PKG/tools/bin/ld
	ln -sf ld.bfd $PKG/tools/bin/ld
}
