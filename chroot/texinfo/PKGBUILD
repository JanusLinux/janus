pkgname=chroot-texinfo
pkgver=6.5
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64' 'mips' 'ppc64le' 'ppc64' 'ppc')
source=("http://ftpmirror.gnu.org/gnu/texinfo/texinfo-$pkgver.tar.xz"
	"perl-528-fixes")

prepare() {
	cd "$srcdir"/texinfo-$pkgver
	patch -p1 < "$srcdir"/perl-528-fixes
}

build() {
	cd "$srcdir"/texinfo-$pkgver
	PERL=/usr/bin/perl \
	BUILD_CC="$HOSTCC" HOST_CC="$HOSTCC" \
	BUILD_RANLIB="ranlib" BUILD_AR="ar" \
	./configure \
		--prefix='' \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd "$srcdir"/texinfo-$pkgver
	make DESTDIR="$pkgdir" install
}
