name=chroot-perl
version=5.28.0
crossver=1.2
release=1
source=(https://www.cpan.org/src/5.0/perl-$version.tar.xz
	https://github.com/arsv/perl-cross/releases/download/$crossver/perl-cross-$crossver.tar.gz)

build() {
	cp -f -r perl-cross-$crossver/* perl-$version/
	cd perl-$version
	./configure \
		--target=$XTARGET \
		--prefix=/tools \
		-Duseshrplib \
		-Dusethreads \
		-Doptimize="$CFLAGS" \
		-Dprivlib=/tools/lib/perl5 \
		-Dsitelib=/tools/lib/perl5/site_perl
	make -j1
	mkdir -p -- $PKG/tools/bin $PKG/tools/lib/perl5
	cp -f perl cpan/podlators/scripts/pod2man $PKG/tools/bin
	cp -R lib/* $PKG/tools/lib/perl5
}

