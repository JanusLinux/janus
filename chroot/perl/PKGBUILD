pkgname=chroot-perl
pkgver=5.28.1
crossver=1.2.1
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'mips64' 'mips' 'ppc64le' 'ppc64' 'ppc')
source=("https://www.cpan.org/src/5.0/perl-$pkgver.tar.xz"
	"https://github.com/arsv/perl-cross/releases/download/$crossver/perl-cross-$crossver.tar.gz")

prepare() {
	cd "$srcdir"
	cp -f -r perl-cross-$crossver/* perl-$pkgver/
}

build() {
	cd "$srcdir"/perl-$pkgver
	./configure \
		--target=$XTARGET \
		--prefix='' \
		--all-static \
		-Dldflags="-static" \
		-Dprivlib=/lib/perl5 \
		-Dsitelib=/lib/perl5/site_perl
	make
}

package() {
	cd "$srcdir"/perl-$pkgver
	mkdir -p -- "$pkgdir"/bin "$pkgdir"/lib/perl5
	cp -f perl cpan/podlators/scripts/pod2man "$pkgdir"/bin
	cp -R lib/* "$pkgdir"/lib/perl5
}
