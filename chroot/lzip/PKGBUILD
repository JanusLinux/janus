pkgname=chroot-lzip
pkgver=1.20
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=("http://download.savannah.gnu.org/releases/lzip/lzip-$pkgver.tar.gz")

build() {
	cd "$srcdir"/lzip-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET \
		CXX="$CXX"
	make
}

package() {
	cd "$srcdir"/lzip-$pkgver
	make DESTDIR="$pkgdir" install
}
