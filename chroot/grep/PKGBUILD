pkgname=chroot-grep
pkgver=3.3
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=("http://ftp.gnu.org/gnu/grep/grep-$pkgver.tar.xz")

build() {
	cd "$srcdir"/grep-$pkgver
	./configure \
		--prefix=/tools \
		--build=$XHOST \
		--host=$XTARGET
	make
}

package() {
	cd "$srcdir"/grep-$pkgver
	make DESTDIR="$pkgdir" install
}
