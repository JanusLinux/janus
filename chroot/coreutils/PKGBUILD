pkgname=chroot-coreutils
pkgver=8.30
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=("http://ftp.gnu.org/gnu/coreutils/coreutils-$pkgver.tar.xz")

build() {
	cd "$srcdir"/coreutils-$pkgver
	./configure \
		--prefix=/tools \
		--cache-file=config.cache \
		--enable-install-program=hostname \
		--build=$XHOST \
		--host=$XTARGET
	sed -i -e 's/^man1_MANS/#man1_MANS/' Makefile
	make
}

package() {
	cd "$srcdir"/coreutils-$pkgver
	make DESTDIR="$pkgdir" install

	rm -rf "$pkgdir"/tools/bin/groups "$pkgdir"/tools/bin/kill
}
