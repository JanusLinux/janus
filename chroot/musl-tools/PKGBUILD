pkgname=chroot-musl-tools
pkgver=current
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=('getconf.c'
	'getent.c'
	'iconv.c')

package() {
	mkdir -p "$pkgdir"/tools/bin

	for file in getconf getent iconv; do
		$CC $CFLAGS "$srcdir"/${file}.c -o "$pkgdir"/tools/bin/$file
	done
}
