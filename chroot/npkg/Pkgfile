name=chroot-npkg
version=0.1.2
release=2
source=(https://github.com/protonesso/npkg/archive/$version.tar.gz
	pkgmk.conf)
build() {
	cd npkg-$version
	make -f Makefile.static PREFIX=/tools DESTDIR=$PKG install

	rm -rf $PKG/etc/pkgmk.conf
	cp $SRC/pkgmk.conf $PKG/etc/pkgmk.conf

	sed -i $PKG/etc/pkgmk.conf \
		-e "s|@BARCH[@]|$BARCH|g" \
		-e "s|@CFLAGS[@]|$CFLAGS|g" \
		-e "s|@CXXFLAGS[@]|$CXXFLAGS|g" \
		-e "s|@GCCOPTS[@]|$GCCOPTS|g"
}
