pkgname=chroot-ubase
pkgver=604b66ae8b4005d89eed1cbab45a64cb57e75390
pkgrel=1
arch=('x86_64' 'x86' 'arm64' 'armv7l' 'armv5tel' 'ppc64le' 'ppc64' 'ppc')
source=("https://github.com/protonesso/ubase/archive/$pkgver.tar.gz")

build() {
	cd "$srcdir"/ubase-$pkgver
	make HOSTCC="$HOSTCC" CC="$CC" CFLAGS="$CFLAGS" LDFLAGS='-static'
}

package() {
	cd "$srcdir"/ubase-$pkgver
	make HOSTCC="$HOSTCC" CC="$CC" CFLAGS="$CFLAGS" LDFLAGS='-static' \
		PREFIX='/tools' DESTDIR="$pkgdir" install
}
